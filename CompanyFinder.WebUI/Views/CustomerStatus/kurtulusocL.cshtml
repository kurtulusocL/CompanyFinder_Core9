@model IEnumerable<CustomerStatus>
@{
	ViewData["Title"] = "Active Customer Status List";
	ViewData["Subtitle"] = "Customer Status Navigator";
	Layout = "~/Views/Shared/_adminLayout.cshtml";
}

<div class="wrapper-pro">
	<div class="breadcome-area mg-b-30 small-dn">
		<div class="container-fluid">
			<div class="row">
				<div class="col-lg-12">
					<div class="breadcome-list map-mg-t-40-gl shadow-reset">
						<div class="row">
							<div class="col-lg-3 col-md-3 col-sm-3 col-xs-3">
								<div class="breadcome-heading">
									@ViewData["Subtitle"]
								</div>
							</div>
							<div class="col-lg-9 col-md-9 col-sm-9 col-xs-9">
								<ul class="breadcome-menu">
									<li>
										<a asp-controller="CustomerStatus" asp-action="kurtulusocL">Customer Status Home</a> <span class="bread-slash">/</span>
									</li>
									<li>
										<a asp-controller="CustomerStatus" asp-action="CustomerStatusOps">Customer Status Ops</a> <span class="bread-slash">/</span>
									</li>
								</ul>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
	<div class="static-table-area mg-b-40">
		<div class="container-fluid">
			<div class="row">
				<div class="col-lg-12">
					<div class="sparkline12-list shadow-reset mg-t-30">
						<div class="sparkline12-hd">
							<div class="main-sparkline12-hd">
								<h1>@ViewData["Title"]</h1>
								<div class="sparkline12-outline-icon">
									<span>
										<a asp-controller="CustomerStatus" asp-action="Create" class="btn btn-custon-rounded-two btn-primary">+ Add New One</a>
									</span>
									<span class="sparkline12-collapse-link"><i class="fa fa-chevron-up"></i></span>
								</div>
							</div>
						</div>
						<div class="sparkline12-graph">
							<div class="static-table-list">
								<table class="table hover-table">
									<thead>
										<tr>
											<th>Status Name</th>
											<th>Customers</th>
											<th>Ops</th>
										</tr>
									</thead>
									<tbody>
										@foreach (var item in Model)
										{
											<tr>
												<td>@item.Name</td>
												<td>@item.Customers.Count()</td>
												<td>
													<a asp-controller="CustomerStatus" asp-action="CustomerStatusDetail" asp-route-id="@item.Id" class="btn btn-custon-rounded-three btn-info btn-sm">Detail</a>
													<a asp-controller="CustomerStatus" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-custon-rounded-three btn-success btn-sm">Edit</a>
												</td>
											</tr>
										}
									</tbody>
								</table>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>