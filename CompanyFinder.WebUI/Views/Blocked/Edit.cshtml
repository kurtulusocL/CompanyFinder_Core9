@model Blocked
@{
	ViewData["Title"] = "Update to Blocked User & Company";
	ViewData["Subtitle"] = "Blocked Navigator";
	Layout = "~/Views/Shared/_adminLayout.cshtml";
}

<div class="wrapper-pro">
	<div class="breadcome-area mg-b-30 small-dn">
		<div class="container-fluid">
			<div class="row">
				<div class="col-lg-12">
					<div class="breadcome-list map-mg-t-40-gl shadow-reset">
						<div class="row">
							<div class="col-lg-3 col-md-3 col-sm-3 col-xs-3">
								<div class="breadcome-heading">
									@ViewData["Subtitle"]
								</div>
							</div>
							<div class="col-lg-9 col-md-9 col-sm-9 col-xs-9">
								<ul class="breadcome-menu">
									<li>
										<a asp-controller="Blocked" asp-action="kurtulusocL">Blocked Home</a> <span class="bread-slash">/</span>
									</li>
									<li>
										<a asp-controller="Blocked" asp-action="BlockedOps">Blocked Ops</a> <span class="bread-slash">/</span>
									</li>
								</ul>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
	<div class="basic-form-area mg-b-40">
		<div class="container-fluid">
			<div class="row">
				<div class="col-lg-12">
					<div class="sparkline12-list shadow-reset mg-t-30">
						<div class="sparkline12-hd">
							<div class="main-sparkline12-hd">
								<h1>@ViewData["Title"]</h1>
								<div class="sparkline12-outline-icon">
									<span class="sparkline12-collapse-link"><i class="fa fa-chevron-up"></i></span>
								</div>
							</div>
						</div>
						<div class="sparkline12-graph">
							<div class="basic-login-form-ad">
								<div class="row">
									<div class="col-lg-12">
										<div class="all-form-element-inner">
											<form asp-controller="Blocked" asp-action="Edit" method="post">
												@Html.AntiForgeryToken()
												<div class="form-group-inner">
													<div class="row">
														<div class="col-lg-6">
															<strong style="color:blue">Mac Address </strong>
															<input type="text" asp-for="MacAddress" name="MacAddress" class="form-control" />
														</div>
														<div class="col-lg-6">
															<strong style="color:blue">Ip Address </strong>
															<input type="text" asp-for="IpAddress" name="IpAddress" class="form-control" />
														</div>
													</div>
												</div>
												<div class="form-group-inner">
													<div class="row">
														<div class="col-lg-6">
															<strong style="color:blue">Local Ip Address </strong>
															<input type="text" asp-for="LocalIpAddress" name="LocalIpAddress" class="form-control" />
														</div>
														<div class="col-lg-6">
															<strong style="color:blue">Remote Ip Address </strong>
															<input type="text" asp-for="RemoteIpAddress" name="RemoteIpAddress" class="form-control" />
														</div>
													</div>
												</div>
												<div class="form-group-inner">
													<div class="row">
														<div class="col-lg-6">
															<strong style="color:blue">Ip Address with VPN </strong>
															<input type="text" asp-for="IpAddressVPN" name="IpAddressVPN" class="form-control" />
														</div>
														<div class="col-lg-6">
															<strong style="color:blue">Host Connection</strong>
															<input type="text" asp-for="Host" name="Host" class="form-control" />
														</div>
													</div>
												</div>
												<div class="form-group-inner">
													<div class="row">
														<div class="col-lg-12">
															<strong style="color:blue">Note / Desctiption </strong>
															<textarea type="text" asp-for="Note" name="Note" class="form-control"></textarea>
														</div>
													</div>
												</div>
												<div class="form-group-inner">
													<div class="login-btn-inner">
														<div class="row">
															<div class="col-lg-7"></div>
															<div class="col-lg-5">
																<div class="login-horizental cancel-wp pull-left">
																	<button class="btn btn-custon-rounded-four btn-primary" type="submit">Update to Blocked User</button>
																	<a asp-controller="Blocked" asp-action="kurtulusocL" class="btn btn-custon-rounded-four btn-warning">Cancel</a>
																</div>
															</div>
														</div>
													</div>
												</div>
											</form>
											<partial name="_adminCrudAlertPartial" />
										</div>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>