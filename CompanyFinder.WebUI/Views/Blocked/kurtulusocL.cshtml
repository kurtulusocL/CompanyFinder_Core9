@model IEnumerable<Blocked>
@{
	ViewData["Title"] = "Active Blocked User & Company";
	ViewData["Subtitle"] = "Blocked Navigator";
	Layout = "~/Views/Shared/_adminLayout.cshtml";
}

<div class="wrapper-pro">
	<div class="breadcome-area mg-b-30 small-dn">
		<div class="container-fluid">
			<div class="row">
				<div class="col-lg-12">
					<div class="breadcome-list map-mg-t-40-gl shadow-reset">
						<div class="row">
							<div class="col-lg-3 col-md-3 col-sm-3 col-xs-3">
								<div class="breadcome-heading">
									@ViewData["Subtitle"]
								</div>
							</div>
							<div class="col-lg-9 col-md-9 col-sm-9 col-xs-9">
								<ul class="breadcome-menu">
									<li>
										<a asp-controller="Blocked" asp-action="kurtulusocL">Blocked Home</a> <span class="bread-slash">/</span>
									</li>
									<li>
										<a asp-controller="Blocked" asp-action="BlockedOps">Blocked Ops</a> <span class="bread-slash">/</span>
									</li>
								</ul>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
	<div class="data-table-area mg-b-40">
		<div class="container-fluid">
			<div class="row">
				<div class="col-lg-12">
					<div class="sparkline13-list shadow-reset">
						<div class="sparkline13-hd">
							<div class="main-sparkline13-hd">
								<h1>@ViewData["Title"] </h1>
								<div class="sparkline13-outline-icon">
									<span>
										<a asp-controller="Blocked" asp-action="Create" class="btn btn-custon-rounded-two btn-primary">+ Add New One</a>
									</span>
									<span class="sparkline13-collapse-link"><i class="fa fa-chevron-up"></i></span>
								</div>
							</div>
						</div>
						<div class="sparkline13-graph">
							<div class="datatable-dashv1-list custom-datatable-overright">
								<div id="toolbar">
									<select class="form-control">
										<option value="">Export Basic</option>
										<option value="all">Export All</option>
										<option value="selected">Export Selected</option>
									</select>
								</div>
								<table id="table"
									   data-toggle="table"
									   data-pagination="true"
									   data-resizable="true"
									   data-search="true"
									   data-show-columns="true"
									   data-show-pagination-switch="true"
									   data-show-refresh="true"
									   data-key-events="true"
									   data-show-toggle="true"
									   data-cookie="true"
									   data-cookie-id-table="saveId"
									   data-show-export="true"
									   data-click-to-select="true"
									   data-toolbar="#toolbar">
									<thead>
										<tr>
											<th data-field="state" data-checkbox="true"></th>
											<th data-field="id">ID</th>
											<th data-field="macAddress">Mac Adddress</th>
											<th data-field="ipAddress">Ip Address</th>
											<th data-field="otherIpAddress">Other Ip Address</th>
											<th data-field="host">Host</th>
											<th>Ops</th>
										</tr>
									</thead>
									<tbody>
										@foreach (var item in Model)
										{
											<tr>
												<td></td>
												<td>@item.Id</td>												
												<td>
													@if (item.MacAddress != null)
													{
														@item.MacAddress
													}
													else
													{
														<strong style="color:maroon">No Mac Address</strong>
													}
												</td>
												<td>
													@if (item.IpAddress != null)
													{
														@item.IpAddress
													}
													else
													{
														<strong style="color:maroon">No Ip Address</strong>
													}
												</td>
												<td>
													<ul>
														@if (item.LocalIpAddress != null)
														{
															<li>Local IP: @item.LocalIpAddress</li>
														}
														else
														{
															<li>
																<strong style="color:maroon">No Local Ip Address</strong>
															</li>
														}
														@if (item.RemoteIpAddress != null)
														{
															<li>Remote IP: @item.RemoteIpAddress</li>
														}
														else
														{
															<li>
																<strong style="color:maroon">No Remote Ip Address</strong>
															</li>
														}
														@if (item.IpAddressVPN != null)
														{
															<li>IP with VPN: @item.IpAddressVPN</li>
														}
														else
														{
															<li>
																<strong style="color:maroon">VPN Ip Address</strong>
															</li>
														}
													</ul>
												</td>
												<td>
													@if (item.Host != null)
													{
														@item.Host
													}
													else
													{
														<strong style="color:maroon">No Host Information</strong>
													}
												</td>
												<td>
													<a asp-controller="Blocked" asp-action="BlockedDetail" asp-route-id="@item.Id" class="btn btn-custon-rounded-two btn-info btn-sm">Detail</a>
													<a asp-controller="Blocked" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-custon-rounded-two btn-success btn-sm">Edit</a>
												</td>
											</tr>
										}
									</tbody>
								</table>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>