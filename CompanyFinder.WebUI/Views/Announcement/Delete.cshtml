@model Announcement
@{
	ViewData["Title"] = "Delete Announcement";
	ViewData["Subtitle"] = "Announcement Navigator";
	Layout = "~/Views/Shared/_adminLayout.cshtml";
}

<div class="wrapper-pro">
	<div class="breadcome-area mg-b-30 small-dn">
		<div class="container-fluid">
			<div class="row">
				<div class="col-lg-12">
					<div class="breadcome-list map-mg-t-40-gl shadow-reset">
						<div class="row">
							<div class="col-lg-3 col-md-3 col-sm-3 col-xs-3">
								<div class="breadcome-heading">
									@ViewData["Subtitle"]
								</div>
							</div>
							<div class="col-lg-9 col-md-9 col-sm-9 col-xs-9">
								<ul class="breadcome-menu">
									<li>
										<a asp-controller="Announcement" asp-action="kurtulusocL">Announcement Home</a> <span class="bread-slash">/</span>
									</li>
									<li>
										<a asp-controller="Announcement" asp-action="AdminAnnouncement">Admin Announcement</a> <span class="bread-slash">/</span>
									</li>
									<li>
										<a asp-controller="Announcement" asp-action="UserAnnouncement">Company User Announcement</a> <span class="bread-slash">/</span>
									</li>
									<li>
										<a asp-controller="Announcement" asp-action="AnnouncementforEveryone">Announcement for Everyone</a> <span class="bread-slash">/</span>
									</li>
									<li>
										<a asp-controller="Announcement" asp-action="AnnouncementOps">Announcement Ops</a> <span class="bread-slash">/</span>
									</li>
								</ul>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
	<div class="widgets-personal-info-area">
		<div class="container-fluid">
			<div class="row">
				<div class="col-lg-12">
					<div class="author-widgets-single widget-ov-mg-t-30 widget-ov-mg-t-n-30 widget-ov-mg-t-l-30 shadow-reset">
						<div class="perso-img">
							@if (Model.ImageUrl != null)
							{
								<img src="~/img/us/announcement/@Model.ImageUrl" class="img-circle circle-border m-b-md" style="max-height:100px;max-width:100px;min-height:100px;min-width:100px;" asp-append-version="true">
							}
							else
							{
								<img src="~/img/statics/noImage.jpg" class="btn-responsive" style="max-height:100px;max-width:100px;min-height:100px;min-width:100px" asp-append-version="true" />
							}
						</div>
						<div class="persoanl-widget-hd persoanl1-widget-hd">
							<h2>@Model.Title</h2>
							@if (Model.Subtitle != null)
							{
								<p>@Model.Subtitle</p>
							}							
							<p>
								<ul>
									@if (Model.ForAdmin == true)
									{
										<li>Admin Announcement</li>
									}
									@if (Model.ForCompany == true)
									{
										<li>Company Announcement</li>
									}
									@if (Model.ForEverybody == true)
									{
										<li>Announcement for Everyone</li>
									}
								</ul>
							</p>
							<p>
								@Html.Raw(Model.Desc)
							</p>
						</div>
						<div class="social-widget-result social-widget1-result">
							<span>@Model.Hit.ToString() hits</span>
							<span>Created At: @Model.CreatedDate.ToShortDateString()</span>
						</div>
						<div class="widget-text-box">
							<h4></h4>
							@if (Model.UpdatedDate != null)
							{
								<p>Updated At: @Model.UpdatedDate.Value.ToShortDateString()</p>
							}
							@if (Model.IsActive == true)
							{
								<p>Active</p>
							}
							else
							{
								<p>DeActive</p>
							}
							@if (Model.IsDeleted == true)
							{
								<p>Deleted</p>
							}
							else
							{
								<p>Not Deleted</p>
							}
							<div class="text-right like-love-list">
								<a href="#" onclick="confirmDelete('Announcement', 'DeleteAnnouncement', @Model.Id); return false;" class="btn btn-custon-rounded-three btn-danger btn-sm"> Delete </a>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>