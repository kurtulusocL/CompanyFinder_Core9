@model CompanyContact
@{
	ViewData["Title"] = "Firma İletişim Bilgisi Ekleme";
	ViewData["Subtitle"] = "Firmanızın İletişim Bilgilerini Buradan Ekleyebilirsiniz.";
	ViewData["Warning"] = "* ile gösterilen alanlar zorunludur.";
	Layout = "~/Views/Shared/_companyUserLayout.cshtml";
}

<section id="contact-us">
	<div class="container">
		<div class="row">

			<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
				<div class="form-header text-center">
					<h4>@ViewData["Title"]</h4>
					<div class="separator">
						<ul>
							<li></li>
							<li></li>
							<li></li>
						</ul>
					</div>
					<p>@ViewData["Subtitle"]</p>
					<br />
					<p>@ViewData["Warning"]</p>
				</div>
				<div class="contact-form">
					<form asp-controller="CompanyOperation" asp-action="CompanyContactCreate" method="post">
						@Html.AntiForgeryToken()
						<div class="row">							
							<div class="col-lg-4 col-md-4 col-sm-4 col-xs-12 form-group">
								<strong style="color:blue">Email Adresi</strong>
								<input type="email" asp-for="EmailAddress" name="EmailAddress" placeholder="Email Adresi" />
							</div>
							<div class="col-lg-4 col-md-4 col-sm-4 col-xs-12 form-group">
								<strong style="color:blue">Telefon Numarası</strong>
								<input type="text" asp-for="PhoneNumber" name="PhoneNumber" placeholder="Telefon Numarası" />
							</div>
							<div class="col-lg-4 col-md-4 col-sm-4 col-xs-12 form-group">
								<strong style="color:blue">Whatsapp No</strong>
								<input type="text" asp-for="WhatsappNo" name="WhatsappNo" placeholder="Whatsapp" />
							</div>
							<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 form-group">
								<strong style="color:blue">Adres Bilgisi</strong>
								<input type="text" asp-for="Address" name="Address" placeholder="Adres Bilgisi" />
							</div>
							<div class="col-lg-8 col-md-8 col-sm-8 col-xs-12 form-group">
								<span class="badge badge-info"><strong>İletişim Bilgileri Gizlensin Mi? *</strong></span>
								<input type="radio" asp-for="IsHide" name="IsHide" id="IsHide_Yes" value="True" />
								<input type="radio" asp-for="IsHide" name="IsHide" id="IsHide_No" value="False" />
								<span class="btn btn-info btn-sm">Not: İletişim bilgilerini gizlerseniz, diğer firmalar sizinle iletişim kuramaz.</span>
							</div>
							<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 form-group text-center">
								<button type="submit">İletişim Bilgilerini Kaydet </button>
								<input type="hidden" asp-for="CompanyId" />
							</div>
						</div>
					</form>
					<br />
					<partial name="_companyCrudAlertPartial" />
				</div>
			</div>
		</div>
	</div>
</section>