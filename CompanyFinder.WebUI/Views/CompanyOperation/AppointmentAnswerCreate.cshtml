@model AppointmentAnswer
@{
	ViewData["Title"] = "Yeni Randevu Talebi";
	ViewData["Subtitle"] = "Buradan Yeni Randevu Talep Edebilirsiniz.";
	ViewData["Warning"] = "* ile gösterilen alanlar zorunludur.";
	Layout = "~/Views/Shared/_companyUserLayout.cshtml";
}

<section id="contact-us">
	<div class="container">
		<div class="row">

			<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
				<div class="form-header text-center">
					<h4>@ViewData["Title"]</h4>
					<div class="separator">
						<ul>
							<li></li>
							<li></li>
							<li></li>
						</ul>
					</div>
					<p>@ViewData["Subtitle"]</p>
					<br />
					<p>@ViewData["Warning"]</p>
				</div>
				<div class="contact-form">
					<form asp-controller="CompanyOperation" asp-action="AppointmentAnswerCreate" method="post">
						@Html.AntiForgeryToken()
						<div class="row">							
							<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 form-group">
								<strong style="color:blue">Randevu Başlığı *</strong>
								<input type="text" asp-for="Title" name="Title" placeholder="Randevu Başlığı *" required />
							</div>
							<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 form-group">
								<strong style="color:blue">Randevu Açıklama Metni *</strong>
								<textarea type="text" class="form-control" asp-for="Desc" name="Desc" placeholder="Randevu Açıklama Metni *" required></textarea>
							</div>
							<div class="col-lg-6 col-md-6 col-sm-6 col-xs-12 form-group">
								<strong style="color:blue">Tarih *</strong>
								<input type="date" asp-for="ReAppointmentDate" name="ReAppointmentDate" required />
							</div>
							<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 form-group text-center">
								<button type="submit">Randevu Öner </button>
								<input type="hidden" asp-for="AppointmentId" />
							</div>
						</div>
					</form>
					<br />
					<partial name="_companyCrudAlertPartial" />
				</div>
			</div>
		</div>
	</div>
</section>