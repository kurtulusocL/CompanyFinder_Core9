@model Stock
@{
	ViewData["Title"] = "Stok Ekleme";
	ViewData["Subtitle"] = "Ürününüze Ait Stok Bilgisini Buradan Ekleyebilirsiniz.";
	ViewData["Warning"] = "* ile gösterilen alanlar zorunludur.";
	Layout = "~/Views/Shared/_companyUserLayout.cshtml";
}

<section id="contact-us">
	<div class="container">
		<div class="row">

			<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
				<div class="form-header text-center">
					<h4>@ViewData["Title"]</h4>
					<div class="separator">
						<ul>
							<li></li>
							<li></li>
							<li></li>
						</ul>
					</div>
					<p>@ViewData["Subtitle"]</p>
					<br />
					<p>@ViewData["Warning"]</p>
				</div>
				<div class="contact-form">
					<form asp-controller="CompanyOperation" asp-action="StockCreate" method="post">
						@Html.AntiForgeryToken()
						<div class="row">							
							<div class="col-lg-4 col-md-4 col-sm-4 col-xs-12 form-group">
								<strong style="color:blue">Stok Miktarı *</strong>
								<input type="number" asp-for="Quantity" name="Quantity" required />
							</div>
							<div class="col-lg-8 col-md-8 col-sm-8 col-xs-12 form-group">
								<strong style="color:blue">Depo</strong>
								<input type="text" asp-for="Warehouse" name="Warehouse" placeholder="Depo" />
							</div>							
							<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 form-group text-center">
								<button type="submit">Ürün Stoğunu Kaydet </button>
								<input type="hidden" asp-for="ProductId" />
							</div>
						</div>
					</form>
					<br />
					<partial name="_companyCrudAlertPartial" />
				</div>
			</div>
		</div>
	</div>
</section>