@model Customer
@{
	ViewData["Title"] = "Delete Customer";
	ViewData["Subtitle"] = "Customer Navigator";
	Layout = "~/Views/Shared/_adminLayout.cshtml";
}

<div class="wrapper-pro">
	<div class="breadcome-area mg-b-30 small-dn">
		<div class="container-fluid">
			<div class="row">
				<div class="col-lg-12">
					<div class="breadcome-list map-mg-t-40-gl shadow-reset">
						<div class="row">
							<div class="col-lg-3 col-md-3 col-sm-3 col-xs-3">
								<div class="breadcome-heading">
									@ViewData["Subtitle"]
								</div>
							</div>
							<div class="col-lg-9 col-md-9 col-sm-9 col-xs-9">
								<ul class="breadcome-menu">
									<li>
										<a asp-controller="Customer" asp-action="kurtulusocL">Customer Home</a> <span class="bread-slash">/</span>
									</li>
									<li>
										<a asp-controller="Customer" asp-action="CustomerOps">Customer Ops</a> <span class="bread-slash">/</span>
									</li>
								</ul>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
	<div class="widgets-personal-info-area">
		<div class="container-fluid">
			<div class="row">
				<div class="col-lg-12">
					<div class="author-widgets-single widget-ov-mg-t-30 widget-ov-mg-t-n-30 widget-ov-mg-t-l-30 shadow-reset">
						<div class="persoanl-widget-hd persoanl1-widget-hd">
							<h2>Customer: @Model.NameSurname</h2>
							@if (Model.PhoneNumber != null)
							{
								<h2>
									Email: @Model.EmailAddress, Phone: @Model.PhoneNumber
								</h2>
							}
							else
							{
								<h2>
									Email: @Model.EmailAddress
								</h2>
							}
							<h2>
								Location: @Model.Location
							</h2>
						</div>
						<div class="social-widget-result social-widget1-result">
							<span>Customer Status: @Model.CustomerStatus.Name</span>
							<span>Customer Company: @Model.CustomerCompany</span>
							<span>Created At: @Model.CreatedDate.ToShortDateString()</span>
						</div>
						<div class="widget-text-box">
							<p>
								@if(Model.Desc!=null)
								{
									<span>Description: @Model.Desc</span>
								}
								else
								{
									<strong style="color:darkred">No Customer Description</strong>
								}
							</p>
							<p>
								Company Information:
								<br />
								@if (Model.CompanyId != null)
								{
									<ul>
										<li>CompanyId: @Model.CompanyId</li>
										<li>Company Name: @Model.Company.Name</li>
									</ul>
								}
								else
								{
									<strong style="color:darkred">No Product Info</strong>
								}
							</p>
							@if (Model.UpdatedDate != null)
							{
								<p>Updated At: @Model.UpdatedDate.Value.ToShortDateString()</p>
							}
							@if (Model.IsActive == true)
							{
								<p>Active</p>
							}
							else
							{
								<p>DeActive</p>
							}
							@if (Model.IsDeleted == true)
							{
								<p>Deleted</p>
							}
							else
							{
								<p>Not Deleted</p>
							}
							<div class="text-right like-love-list">
								<a href="#" onclick="confirmDelete('Customer', 'DeleteCustomer', @Model.Id); return false;" class="btn btn-custon-rounded-three btn-danger btn-sm"> Delete </a>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>