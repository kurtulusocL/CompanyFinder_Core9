@model UserUpdateProfileDto
@{
	ViewData["Title"] = "Profil Güncelleme";
	ViewData["Subtitle"] = "Profil Bilgilerinizi Buradan Güncelleyebilirsiniz.";
	ViewData["markup *"] = "* ile Belirtilen Alanlar Zorunlu Alanlardır ve Boş Geçilemez.";
	Layout = "~/Views/Shared/_companyUserLayout.cshtml";
}

<section id="contact-us">
	<div class="container">
		<div class="row">
			<div class="col-lg-2 col-md-2 col-sm-6 col-xs-12"></div>
			<div class="col-lg-8 col-md-8 col-sm-6 col-xs-12">
				<div class="form-header text-center">
					<h4>@ViewData["Title"]</h4>
					<div class="separator">
						<ul>
							<li></li>
							<li></li>
							<li></li>
						</ul>
					</div>
					<p>@ViewData["Subtitle"]</p>
					<p>@ViewData["markup *"]</p>
					<hr />
					<p>
						<ul>
							<li>Güvenliğiniz için belirlediğiniz şifrelerde bazı kurallarımız var. Bu kurallar: </li>
							<li>Şifrenizde en az bir tane karakter (",.;-_?!*=") bulunmak zorundadır.</li>
							<li>Şifrenizde en az bir tane büyük harf ve yine en az bir tane küçük harf bulunmak zorundadır.</li>
							<li>Şifreniz en az 8 karakter olmalıdır.</li>
						</ul>
					</p>
				</div>
				<div class="contact-form">
					<form asp-controller="AccountCompany" asp-action="UpdateProfile" method="post">
						@Html.AntiForgeryToken()
						<div class="row">							
							<div class="col-lg-6 col-md-6 col-sm-6 col-xs-12 form-group">
								<span class="badge badge-info"><strong>E-Mail Adresiniz *</strong></span>
								<input type="email" asp-for="Email" name="Email" placeholder="Email Adresiniz *" required />
							</div>
							<div class="col-lg-6 col-md-6 col-sm-6 col-xs-12 form-group">
								<span class="badge badge-info"><strong>Telefon Numaranız *</strong></span>
								<input type="text" asp-for="PhoneNumber" name="PhoneNumber" placeholder="Telefon Numaranız *" required />
							</div>
							<div class="col-lg-6 col-md-6 col-sm-6 col-xs-12 form-group">
								<span class="badge badge-info"><strong>Bulunduğunuz Şehir *</strong></span>
								<input type="text" asp-for="City" name="City" placeholder="Bulunduğunuz Şehir *" required />
							</div>
							<div class="col-lg-6 col-md-6 col-sm-6 col-xs-12 form-group">
								<span class="badge badge-info"><strong>Bulunduğunuz Ülke *</strong></span>
								<input type="text" asp-for="Country" name="Country" placeholder="Bulunduğunuz Ülke *" required />
							</div>
							<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 form-group">
								<span class="badge badge-info"><strong>Onay Kodu İle Giriş Yap *</strong></span>
								<br />
								<input type="radio" asp-for="IsLoginConfirmCode" name="IsLoginConfirmCode" id="IsLoginConfirmCode_Yes" value="True" /> <span style="color:black">Evet, Kodla Giriş Yap</span>
								<br />
								<input type="radio" asp-for="IsLoginConfirmCode" name="IsLoginConfirmCode" id="IsLoginConfirmCode_No" value="False" /> <span style="color:black">Hayır, Kod Kullanmak İstemiyorum.</span>
							</div>
							<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 form-group text-center">
								<button type="submit">Profili Güncelle </button>
							</div>
						</div>
					</form>
					<br />
					<partial name="_userAlertPartial" />
				</div>
			</div>
			<div class="col-lg-2 col-md-2 col-sm-6 col-xs-12"></div>
		</div>
	</div>
</section>