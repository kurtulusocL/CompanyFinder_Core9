@model UserForgotPasswordDto
@{
	ViewData["Title"] = "Şifremi Unuttum";
	ViewData["Subtitle"] = "Size Şifre Sıfırlama Bağlantısı Gönderebilmemiz İçin Lütfen Email Adresinizi Yazın.";
	ViewData["markup *"] = "* ile Belirtilen Alanlar Zorunlu Alanlardır ve Boş Geçilemez.";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<section id="contact-us">
	<div class="container">
		<div class="row">
			<div class="col-lg-1 col-md-1 col-sm-6 col-xs-12"></div>
			<div class="col-lg-10 col-md-10 col-sm-6 col-xs-12">
				<div class="form-header text-center">
					<h4>@ViewData["Title"]</h4>
					<div class="separator">
						<ul>
							<li></li>
							<li></li>
							<li></li>
						</ul>
					</div>
					<p>@ViewData["Subtitle"]</p>
					<p>@ViewData["markup *"]</p>
				</div>
				<div class="contact-form">
					<form asp-controller="AccountCompany" asp-action="ForgotPassword" method="post">
						@Html.AntiForgeryToken()
						<div class="row">
							<div class="col-lg-10 col-md-10 col-sm-6 col-xs-12 form-group">
								<input type="email" asp-for="Email" name="Email" placeholder="Email Adresiniz *" required />
							</div>
							<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 form-group text-center">
								<button type="submit">Kod Gönder</button>
							</div>
						</div>
					</form>
					<br />
					<partial name="_frontEndAlertPartial" />
				</div>
			</div>
			<div class="col-lg-1 col-md-1 col-sm-6 col-xs-12"></div>
		</div>
	</div>
</section>