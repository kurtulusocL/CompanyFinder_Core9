@model UserLoginDto
@{
	ViewData["Title"] = "Firma Giriş Sayfası";
	ViewData["Subtitle"] = "Firma Olarak Giriş Yapabilirsiniz.";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<section id="contact-us">
	<div class="container">
		<div class="row">
			<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
				<div class="row">
					<div class="col-lg-2 col-md-2 col-sm-12 col-xs-12"></div>
					<div class="col-lg-8 col-md-6 col-sm-12 col-xs-12">
						<div class="form-header text-center">
							<h4>@ViewData["Title"]</h4>
							<div class="separator">
								<ul>
									<li></li>
									<li></li>
									<li></li>
								</ul>
							</div>
							<p>@ViewData["Subtitle"]</p>
						</div>
						<div class="contact-form">
							@using (Html.BeginForm("Login", "AccountCompany", FormMethod.Post, new { ReturnUrl = ViewBag.ReturnUrl }))
							{
								@Html.AntiForgeryToken()
								<div class="row">
									<div class="col-lg-2 col-md-2 col-sm-2 col-xs-12"></div>
									<div class="col-lg-8 col-md-8 col-sm-8 col-xs-12">									
										<div class="form-group">
											<input type="email" asp-for="Email" name="Email" placeholder="Email Adresi" required />
										</div>
										<div class="form-group">
											<input type="password" asp-for="Password" name="Password" placeholder="Şifre" required />
										</div>
									</div>
									<div class="col-lg-2 col-md-2 col-sm-2 col-xs-12"></div>
									<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 form-group text-center mar-none">
										<button type="submit">Giriş Yap</button>
									</div>
								</div>
							}

							<div class="float-right">
								<a asp-controller="AccountCompany" asp-action="ForgotPassword" class="btn btn-dark btn-sm btn-rounded"> Şifremi Unuttum</a>
							</div>
							<br />
						</div>
						<partial name="_frontEndAlertPartial" />
					</div>
				</div>
			</div>
		</div>
	</div>
</section>