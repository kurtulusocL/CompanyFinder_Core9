@model UserResetPasswordDto
@{
	ViewData["Title"] = "Şifre Sıfırlama";
	ViewData["Subtitle"] = "Giriş Bilgilerinizi Buradan Sıfırlayabilirsiniz.";
	ViewData["markup *"] = "* ile Belirtilen Alanlar Zorunlu Alanlardır ve Boş Geçilemez.";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<section id="contact-us">
	<div class="container">
		<div class="row">
			<div class="col-lg-2 col-md-2 col-sm-6 col-xs-12"></div>
			<div class="col-lg-8 col-md-8 col-sm-6 col-xs-12">
				<div class="form-header text-center">
					<h4>@ViewData["Title"]</h4>
					<div class="separator">
						<ul>
							<li></li>
							<li></li>
							<li></li>
						</ul>
					</div>
					<p>@ViewData["Subtitle"]</p>
					<p>@ViewData["markup *"]</p>	
					<hr />
					<p>
						<ul>
							<li>Güvenliğiniz için belirlediğiniz şifrelerde bazı kurallarımız var. Bu kurallar: </li>
							<li>Şifrenizde en az bir tane karakter (",.;-_?!*=") bulunmak zorundadır.</li>
							<li>Şifrenizde en az bir tane büyük harf ve yine en az bir tane küçük harf bulunmak zorundadır.</li>
							<li>Şifreniz en az 8 karakter olmalıdır.</li>
						</ul>
					</p>
				</div>
				<div class="contact-form">
					<form asp-controller="AccountCompany" asp-action="ResetPassword" method="post">						
						@Html.AntiForgeryToken()					
						<div class="row">							
							<div class="col-lg-10 col-md-10 col-sm-10 col-xs-12 form-group">
								<input type="email" asp-for="Email" name="Email" placeholder="Email Adresiniz *" required />
							</div>							
							<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 form-group">
								<input type="password" asp-for="NewPassword" name="NewPassword" placeholder="Bir Şifre Belirleyin *" required />
							</div>
							<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 form-group">
								<input type="password" asp-for="ConfirmNewPassword" name="ConfirmNewPassword" placeholder="Şifreyi Tekrar Yazın *" required />
							</div>
							<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 form-group text-center">
								<button type="submit">Şifreyi Yenile </button>		
								<input type="hidden" asp-for="Code" value="@Model.Code" />
							</div>
						</div>
					</form>
					<br />
					<partial name="_frontEndAlertPartial" />					
				</div>
			</div>
			<div class="col-lg-2 col-md-2 col-sm-6 col-xs-12"></div>
		</div>
	</div>
</section>