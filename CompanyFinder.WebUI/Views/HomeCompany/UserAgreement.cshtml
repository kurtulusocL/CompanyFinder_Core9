@model IEnumerable<UserAgreement>
@{
    ViewData["Title"] = "Kullanıcı Sözleşmesi ve Hizmet Şartları";
    ViewData["Subtitle"] = "bi2bi.com Kullanıcı Sözleşmesi ve Hizmet Alım Şartları Hakkında Aydınlatma Metni";
    Layout = "~/Views/Shared/_companyUserLayout.cshtml";
}

<section id="inner-banner">
    <div class="container">
        <div class="row">
            <div class="inner-heading">
                <h2>@ViewData["Title"]</h2>
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item active" aria-current="page">@ViewData["Subtitle"]</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</section>
<section id="faq">
    <div class="container">
        <div class="col-md-12">
            <div id="accordion">
                @foreach (var item in Model)
                {
                    <div class="card">
                        <div class="card-header" id="headingOne">
                            <h5 class="mb-0">
                                <button class="btn btn-link" data-toggle="collapse" data-target="#@item.Id" aria-expanded="true" aria-controls="collapseOne">
                                    <span class="s_no">@item.Title</span>
                                </button>
                            </h5>
                        </div>
                        <div id="@item.Id" class="collapse" aria-labelledby="headingOne" data-parent="#accordion">
                            <div class="card-body">
                                <p>@Html.Raw(item.Desc)</p>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</section>