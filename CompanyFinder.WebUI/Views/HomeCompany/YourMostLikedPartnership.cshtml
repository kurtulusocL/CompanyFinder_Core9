@using X.PagedList.Mvc.Core
@using X.PagedList
@using X.PagedList.Web.Common
@model IPagedList<CompanyPartnership>
@{
	ViewData["Title"] = "Yayınladığnız ve En Fazla Beğenilen Firma Teklif / Talep Listesi";
	Layout = "~/Views/Shared/_companyUserLayout.cshtml";
}

<section id="inner-banner">
	<div class="container">
		<div class="row">
			<div class="inner-heading">
				<h2>@ViewData["Title"]</h2>
				<nav aria-label="breadcrumb">
					<ol class="breadcrumb">
						<li class="breadcrumb-item active" aria-current="page">@ViewData["Subtitle"]</li>
					</ol>
				</nav>
			</div>
		</div>
	</div>
</section>
<section id="contact-us">
	<div class="container">
		<div class="row">
			<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
				<div class="form-header text-center">
					<h4>@ViewData["Title"]</h4>
					<div class="separator">
						<ul>
							<li></li>
							<li></li>
							<li></li>
						</ul>
					</div>
				</div>
				<div class="contact-form">
					<table class="table table-hover display" id="table_id">
						<thead>
							<tr style="color:black">
								<th>Beğeni</th>
								<th>Başlık</th>
								<th>Başlangıç Tarihi</th>
								<th>Bitiş Tarihi</th>
								<th>Kategorisi</th>
								<th>Fiyat</th>
								<th>Diğer İstatistikler</th>
								<th>İncele</th>
							</tr>
						</thead>
						<tbody>
							@foreach (var item in Model)
							{
								<tr style="color:black">
									<td>@item.Likes.Count()</td>
									<td>@item.Title</td>
									<td>@item.StartDate.ToShortDateString()</td>
									<td>@item.ExpiryDate.ToShortDateString()</td>
									<td>@item.ProductCategory.Name</td>
									<td>
										@if (item.Price != null)
										{
											<span>
												@item.Price.Value.ToString("C2")
											</span>
										}
										else
										{
											<span class="badge badge-info">Fiyat Belirtilmemiş</span>
										}
									</td>
									<td>
										<ul>
											<li>@item.Hits.Count() görüntülenme</li>
											<li>@item.SavedContents.Count() kaydedilme</li>
										</ul>
									</td>
									<td>@item.CreatedDate.ToShortDateString()</td>
									<td>
										<a asp-controller="CompanyPartnership" asp-action="Detail" asp-route-id="@item.Id" class="btn btn-primary btn-sm" target="_blank">İncele</a>
									</td>
								</tr>
							}
						</tbody>
					</table>
				</div>
			</div>
			<div class="pagination">
				<div class="pagination-info">
					@Html.PagedListPager(Model, page => Url.Action("YourMostLikedPartnership", new { page }), PagedListRenderOptions.ClassicPlusFirstAndLast)
				</div>
			</div>
		</div>
	</div>
</section>