@using X.PagedList.Mvc.Core
@using X.PagedList
@using X.PagedList.Web.Common
@model IPagedList<CompanyFormAnswer>
@{
	ViewData["Title"] = "Forum Cevap Listeniz";
	ViewData["Subtitle"] = "Forumlardaki Konulara Verdiğiniz Yanıtların Listesi";
	Layout = "~/Views/Shared/_companyUserLayout.cshtml";
}

<section id="inner-banner" class="index-3">
    <div class="container">
        <div class="col-lg-12 col-md-12 col-xs-12">
            <div class="inner-heading">
                <h2>@ViewData["Title"]</h2>
                <div class="separator left-align">
                    <ul>
                        <li></li>
                        <li></li>
                        <li></li>
                    </ul>
                </div>
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item active" aria-current="page">@ViewData["Subtitle"]</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</section>
<section id="services" class="index-3 inner pdb-70">
    <div class="container">
        <div class="col-lg-12 col-md-12 col-xs-12">
            <div class="row blog-isotope">
                @foreach(var item in Model)
                {
                    <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12 blog-iso-item">
                        <div class="item card_mr_top">
                            <div class="service-card">
                                <div class="service_icon"><i class="flat flaticon-digital-marketing"></i></div>
                                <div class="service_detail">
                                    @if (item.Title != null)
                                    {
                                        <h5>Başlık: @item.Title</h5>
                                    }
                                    <p>@Html.Raw(item.Desc) </p>
                                    <hr />
                                    <p>
                                        @if (item.CompanyFormId != null)
                                        {
                                            <span>Forum: @item.CompanyForm.Title</span>
                                        }
                                    </p>
                                   <br />
                                    <p>
                                        <a href="#" onclick="confirmSetDeleted('CompanyOperation', 'DeleteCompanyFormAnswer', @item.Id); return false;" class="btn btn-danger btn-sm">Sil</a>
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                }                
            </div>
            <div class="pagination">
                <div class="pagination-info">
                    @Html.PagedListPager(Model, page => Url.Action("YourFormAnswerList", new { page }), PagedListRenderOptions.ClassicPlusFirstAndLast)
                </div>
            </div>
        </div>
    </div>
</section>