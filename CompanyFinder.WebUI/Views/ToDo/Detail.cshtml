@model ToDo
@{
	ViewData["Title"] = "Task Detail";
	ViewData["Subtitle"] = "Task Navigator";
	Layout = "~/Views/Shared/_adminLayout.cshtml";
}

<div class="wrapper-pro">
	<div class="contact-clients-area mg-b-40">
		<div class="container-fluid">
			<div class="row">
				<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
					<div class="contact-client-single shadow-reset ct-client-b-mg-30 ct-client-b-mg-30-n contact-client-v2">
						<div class="row">
							<div class="col-lg-12">
								<div class="contact-client-img contact-img-v2">
									@await Component.InvokeAsync("TaskProfileImage", new { id = Model.UserId })
									<h2><a class="contact-client-name">@Model.User.NameSurname</a></h2>
									@if (Model.IsFinished == true)
									{
										<h1><a>Closed Task</a></h1>
									}
									else
									{
										<h1><a>Open Task</a></h1>
									}
								</div>
								<div class="contact-client-address">
									<h3>@Model.Title</h3>
									@if (Model.Subtitle != null)
									{
										<p>
											@Model.Subtitle
										</p>
									}
									else
									{
										<strong style="color:midnightblue">Not Task Subtitle Information</strong>
									}
									<p class="address-client-ct client-addres-v2">
										@Html.Raw(Model.Desc)
									</p>
									<p>
										Started at: @Model.StartDate.ToShortDateString() - End Date: @Model.EndDate.ToShortDateString()
									</p>
								</div>
								<div class="contact-client-footer">
									<div class="btn-group">
										@if (Model.IsActive == true)
										{
											<a asp-controller="ToDo" asp-action="SetFinished" asp-route-id="@Model.Id" class="btn btn-xs btn-white"> Set Closed Task </a>
										}
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>