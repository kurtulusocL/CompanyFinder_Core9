@model ToDo
@{
	ViewData["Title"] = "Delete Task";
	ViewData["Subtitle"] = "Task Navigator";
	Layout = "~/Views/Shared/_adminLayout.cshtml";
}

<div class="wrapper-pro">
	<div class="breadcome-area mg-b-30 small-dn">
		<div class="container-fluid">
			<div class="row">
				<div class="col-lg-12">
					<div class="breadcome-list map-mg-t-40-gl shadow-reset">
						<div class="row">
							<div class="col-lg-3 col-md-3 col-sm-3 col-xs-3">
								<div class="breadcome-heading">
									@ViewData["Subtitle"]
								</div>
							</div>
							<div class="col-lg-9 col-md-9 col-sm-9 col-xs-9">
								<ul class="breadcome-menu">
									<li>
										<a asp-controller="ToDo" asp-action="kurtulusocL">Task Home</a> <span class="bread-slash">/</span>
									</li>
									<li>
										<a asp-controller="ToDo" asp-action="OpenTask">Open Tasks</a> <span class="bread-slash">/</span>
									</li>
									<li>
										<a asp-controller="ToDo" asp-action="ClosedTask">Closed Tasks</a> <span class="bread-slash">/</span>
									</li>
									<li>
										<a asp-controller="ToDo" asp-action="TaskOps">Task Ops</a> <span class="bread-slash">/</span>
									</li>
								</ul>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
	<div class="widgets-personal-info-area">
		<div class="container-fluid">
			<div class="row">
				<div class="col-lg-12">
					<div class="author-widgets-single widget-ov-mg-t-30 widget-ov-mg-t-n-30 widget-ov-mg-t-l-30 shadow-reset">
						<div class="widget-text-box">
							<div class="social-widget-result social-widget1-result">
								<span>
									Title: @Model.Title
								</span>
								<p>
									<span>Subtitle:</span>
									@if (Model.Subtitle != null)
									{
										@Model.Subtitle
									}
									else
									{
										<strong style="color:darkred">No Subtitle</strong>
									}
								</p>
							</div>
							<div class="social-widget-result social-widget1-result">
								<span>Created At: @Model.CreatedDate.ToShortDateString()</span>
								<span>Started: @Model.StartDate.ToShortDateString() - End: @Model.EndDate.ToShortDateString()</span>
								<span>
									<i class="fa fa-eye"></i> @Model.Hit.ToString()
								</span>
							</div>
							<div class="social-widget-result social-widget1-result">
								<h4>Task: @Html.Raw(Model.Desc)</h4>
								@if (Model.IsFinished == true)
								{
									if (Model.FinishedDate != null)
									{
										<strong style="color:darkblue">Finished at @Model.FinishedDate.Value.ToShortDateString()</strong>
									}
									else
									{
										<strong style="color:darkred">No Finished Date</strong>
									}
								}
								else
								{
									<strong style="color:darkblue">Open Task</strong>
								}
							</div>
							<div class="social-widget-result social-widget1-result">
								<h4>User Information</h4>
								@if (Model.UserId != null)
								{
									<ul>
										<li>UserId: @Model.UserId</li>
										<li>Name Surname: @Model.User.NameSurname</li>
										<li>Email: @Model.User.Email</li>
										<li>Username: @Model.User.UserName</li>
										<li>Location: @Model.User.City, @Model.User.Country</li>
										@if (Model.User.Title != null)
										{
											<li>Title: @Model.User.Title</li>
										}
									</ul>
								}
								else
								{
									<strong style="color:darkred">No User Admin Info</strong>
								}
							</div>
							@if (Model.UpdatedDate != null)
							{
								<p>Updated At: @Model.UpdatedDate.Value.ToShortDateString()</p>
							}
							@if (Model.IsActive == true)
							{
								<p>Active</p>
							}
							else
							{
								<p>DeActive</p>
							}
							@if (Model.IsDeleted == true)
							{
								<p>Deleted</p>
							}
							else
							{
								<p>Not Deleted</p>
							}
							<div class="text-right like-love-list">
								<a href="#" onclick="confirmDelete('ToDo', 'DeleteDeleteTask', @Model.Id); return false;" class="btn btn-custon-rounded-three btn-danger btn-sm"> Delete </a>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>