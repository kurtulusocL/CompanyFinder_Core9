@model Pricing
@{
	ViewData["Title"] = "Update Pricing Option";
	ViewData["Subtitle"] = "Pricing Navigator";
	Layout = "~/Views/Shared/_adminLayout.cshtml";
}

<div class="wrapper-pro">
	<div class="breadcome-area mg-b-30 small-dn">
		<div class="container-fluid">
			<div class="row">
				<div class="col-lg-12">
					<div class="breadcome-list map-mg-t-40-gl shadow-reset">
						<div class="row">
							<div class="col-lg-3 col-md-3 col-sm-3 col-xs-3">
								<div class="breadcome-heading">
									@ViewData["Subtitle"]
								</div>
							</div>
							<div class="col-lg-9 col-md-9 col-sm-9 col-xs-9">
								<ul class="breadcome-menu">
									<li>
										<a asp-controller="Pricing" asp-action="kurtulusocL">Pricing Home</a> <span class="bread-slash">/</span>
									</li>
									<li>
										<a asp-controller="Pricing" asp-action="PricingOps">Pricing Ops</a> <span class="bread-slash">/</span>
									</li>
								</ul>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
	<div class="basic-form-area mg-b-40">
		<div class="container-fluid">
			<div class="row">
				<div class="col-lg-12">
					<div class="sparkline12-list shadow-reset mg-t-30">
						<div class="sparkline12-hd">
							<div class="main-sparkline12-hd">
								<h1>@ViewData["Title"]</h1>
								<div class="sparkline12-outline-icon">
									<span class="sparkline12-collapse-link"><i class="fa fa-chevron-up"></i></span>
								</div>
							</div>
						</div>
						<div class="sparkline12-graph">
							<div class="basic-login-form-ad">
								<div class="row">
									<div class="col-lg-12">
										<div class="all-form-element-inner">
											<form asp-controller="Pricing" asp-action="Edit" method="post">
												@Html.AntiForgeryToken()
												<div class="form-group-inner">
													<div class="row">
														<div class="col-sm-6">
															<div class="chosen-select-single mg-b-20">
																<strong style="color:blue">Pricing Category List <span class="text-danger">*</span></strong>
																<select class="form-control" asp-for="PricingCategoryId" name="PricingCategoryId" required>
																	@foreach (var item in ViewBag.PricingCategories)
																	{
																		<option value="@item.Id">@item.Name</option>
																	}
																</select>
															</div>
														</div>
														<div class="col-lg-6">
															<strong style="color:blue">Pricing Title<span class="text-danger">*</span></strong>
															<input type="text" asp-for="Title" name="Title" class="form-control" required />
														</div>
													</div>
												</div>
												<div class="form-group-inner">
													<div class="row">
														<div class="col-lg-12">
															<strong style="color:blue">Pricing Description <span class="text-danger">*</span></strong>
															<textarea type="text" asp-for="Desc" name="Desc" class="ckeditor" required></textarea>
														</div>
													</div>
												</div>
												<div class="form-group-inner">
													<div class="row">
														<div class="col-lg-9">
															<strong style="color:blue">Pricing Subtitle</strong>
															<input type="text" asp-for="Subtitle" name="Subtitle" class="form-control" />
														</div>
														<div class="col-lg-3">
															<strong style="color:blue">Price <span class="text-danger">*</span></strong>
															<input type="text" asp-for="Price" name="Price" class="form-control" required />
														</div>
													</div>
												</div>
												<div class="form-group-inner">
													<div class="login-btn-inner">
														<div class="row">
															<div class="col-lg-7"></div>
															<div class="col-lg-5">
																<div class="login-horizental cancel-wp pull-left">
																	<button class="btn btn-custon-rounded-four btn-primary" type="submit">Update Pricing</button>
																	<a asp-controller="Pricing" asp-action="kurtulusocL" class="btn btn-custon-rounded-four btn-warning">Cancel</a>
																</div>
															</div>
														</div>
													</div>
												</div>
											</form>
											<partial name="_adminCrudAlertPartial" />
										</div>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>