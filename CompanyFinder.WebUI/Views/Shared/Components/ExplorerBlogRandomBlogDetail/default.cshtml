@model IEnumerable<Blog>
@{
	Layout = null;
}

@foreach (var item in Model)
{
	<div class="post-item">
		<div class="post-img">
			<img src="~/img/company/blog/@item.ImageUrl" style="max-height:66px;max-width:69px;" asp-append-version="true" />
		</div>
		<div class="post-content">
			<a asp-controller="Blog" asp-action="Detail" asp-route-id="@item.Id">
				@item.Title
			</a>
			@if (item.CompanyId != null)
			{
				<a asp-controller="Blog" asp-action="Company" asp-route-id="@item.CompanyId">
					Firma: @item.Company.Name
				</a>
			}
			<div class="post-status"> <i class="flat flaticon-calendar"></i> <span>@item.CreatedDate.ToShortDateString()</span> </div>
		</div>
	</div>
}