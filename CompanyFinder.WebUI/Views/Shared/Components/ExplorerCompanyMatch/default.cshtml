@{
	Layout = null;
}

<form asp-controller="Explorer" asp-action="CompanyMatchResult" method="get">
	<div class="row">
		<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
			<div class="form-group">
				<div class="chosen-select-single mg-b-20">
					<strong style="color:blue">Kategori Listesi</strong>
					<select class="form-control">
						<option>-- Firmanın Kategorisini Seçin --</option>
						@foreach (var item in ViewBag.CompanyCategories)
						{
							<option value="@item.Id">@item.Name</option>
						}
					</select>
				</div>
			</div>
			<div class="form-group">
				<div class="chosen-select-single mg-b-20">
					<strong style="color:blue">Altkategori Listesi</strong>
					<select class="form-control">
						<option>-- Firmanın Alkategorisini Seçin --</option>
						@foreach (var item in ViewBag.CompanySubcategories)
						{
							<option value="@item.Id">@item.Name</option>
						}
					</select>
				</div>
			</div>
			<div class="form-group">
				<div class="chosen-select-single mg-b-20">
					<strong style="color:blue">Ülke Listesi</strong>
					<select class="form-control">
						<option>-- Firmanın Ülkesini Seçin --</option>
						@foreach (var item in ViewBag.CompanyCountries)
						{
							<option value="@item.Id">@item.Name</option>
						}
					</select>
				</div>
			</div>
			<div class="form-group">
				<div class="chosen-select-single mg-b-20">
					<strong style="color:blue">Şehir Listesi</strong>
					<select class="form-control">
						<option>-- Firmanın Şehirini Seçin --</option>
						@foreach (var item in ViewBag.CompanyCities)
						{
							<option value="@item.Id">@item.Name</option>
						}
					</select>
				</div>
			</div
		</div>
		<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 form-group text-center mar-none">
			<button type="submit">Eşleşme Bul <i class="flat flaticon-plane"></i></button>
		</div>
	</div>
</form>