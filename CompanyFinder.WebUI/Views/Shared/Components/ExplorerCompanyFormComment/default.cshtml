@model IEnumerable<CompanyFormAnswer>
@{
	Layout = null;
}

@foreach (var item in Model)
{
	<li class="comment-item">
		<div class="comment">
			<div class="visitor_pic">
				@if (item.UserId != null)
				{
					@await Component.InvokeAsync("ExplorerCompanyFormAnswerCompanyLogo", new { id = item.UserId })
				}
			</div>
			<div class="visitor_description">
				<div class="name_date">
					@if (item.UserId != null)
					{
						@await Component.InvokeAsync("ExplorerCompanyFormCompanyInfo", new { id = item.UserId })
					}
					<div class="date">@item.CreatedDate.ToShortDateString()</div>
				</div>

				@if (item.Title != null)
				{
					<p> @item.Title</p>
				}
				<p>@item.Desc</p>
				<p>
					<a asp-controller="CompanyOperation" asp-action="SendCompanyFormAnswerReport" asp-route-id="@item.Id" class="btn btn-danger btn-sm" style="color:black">Bildir</a>
				</p>
			</div>
		</div>
	</li>
}