@model IEnumerable<QuestionAnswer>
@{
    Layout = null;
}

@foreach(var item in Model)
{
    <li class="comment-item">
        <div class="comment">
            <div class="visitor_pic">
                @if (item.UserId != null)
                {
                    @await Component.InvokeAsync("CompanyUserProfileLogo", new { id = item.UserId })
                }
            </div>
            <div class="visitor_description">
                <div class="name_date">
                    @if (item.UserId != null)
                    {
                        <h6>@item.User.NameSurname</h6>
                    }
                    <div class="date">@item.CreatedDate.ToShortDateString()</div>
                </div>
                @if (item.Title != null)
                {
                    <p>Cevap Başlığı: @item.Title</p>
                }
                <p>Cevap: @item.Answer</p>
                <a asp-action="CompanyOperation" asp-controller="DeleteQuestionAnswer" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Sil</a>
            </div>
        </div>
    </li>
}