@model IEnumerable<CommentAnswer>
@{
	Layout = null;
}

@foreach (var item in Model)
{
	<li class="comment-item">
		<div class="comment">			
			<div class="visitor_description">
				<div class="name_date">					
					<div class="date">
						@item.CreatedDate.ToShortDateString()
					</div>					
				</div>
				@if (item.Title != null)
				{
					<p>Cevap Başlığı: @item.Title</p>
				}
				<p>Cevap: @item.Text</p>
			</div>
		</div>
	</li>
}