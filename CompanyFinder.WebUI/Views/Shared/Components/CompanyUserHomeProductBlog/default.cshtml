@model Company
@{
	Layout = null;
}

@if (Model != null)
{
	<section id="portfolio" class="gray-bg">
		<div class="container">
			<div class="section_heading">
				<h2><span>Ürünler</span></h2>
				<div class="separator">
					<ul>
						<li></li>
						<li></li>
						<li></li>
					</ul>
				</div>
				<a asp-controller="HomeCompany" asp-action="ProductList" asp-route-id="@Model.Id" class="btn btn-primary btn-rounded btn-sm">Hepsini Gör</a>
			</div>
			<div class="col-lg-12 col-md-12 col-xs-12 content_sec">
				<div class="row">
					@if (Model.Products.Count() == 0)
					{
						<a asp-controller="CompanyOperation" asp-action="ProductCreate" asp-route-id="@Model.Id" class="btn btn-info btn-rounded btn-sm"> Ürün Ekle</a>
					}
					else
					{
						@await Component.InvokeAsync("CompanyUserHomeProducts", new { id = Model.Id })
					}
				</div>
			</div>
		</div>
	</section>
	<section id="blog_post" class="index-2">
		<div class="container">
			<div class="section_heading">
				<h2><span>Blog Yazıları</span></h2>
				<div class="separator">
					<ul>
						<li></li>
						<li></li>
						<li></li>
					</ul>
				</div>
				<hr />
				<a asp-controller="HomeCompany" asp-action="BlogList" asp-route-id="@Model.Id" class="btn btn-primary btn-rounded btn-sm">Hepsini Gör</a>
				<br /><br />
			</div>
			<div class="col-lg-12 col-md-12 col-xs-12">
				<div class="row">					
					@if (Model.Blogs.Count() == 0)
					{
						<a asp-controller="CompanyOperation" asp-action="BlogCreate" asp-route-id="@Model.Id" class="btn btn-info btn-rounded btn-sm"> Blog Makallesi Ekle</a>
					}
					else
					{
						@await Component.InvokeAsync("CompanyUserHomeBlogs", new { id = Model.Id })
					}
				</div>
			</div>
		</div>
	</section>
}
else
{
	<section id="portfolio" class="gray-bg">
		<div class="container">
			<div class="section_heading">
				<h2><span>Ürünlerim</span></h2>
				<div class="separator">
					<ul>
						<li></li>
						<li></li>
						<li></li>
					</ul>
				</div>			
			</div>			
		</div>
	</section>
	<section id="blog_post" class="index-2">
		<div class="container">
			<div class="section_heading">
				<h2><span>Blog Yazılarım</span></h2>
				<div class="separator">
					<ul>
						<li></li>
						<li></li>
						<li></li>
					</ul>
				</div>				
			</div>			
		</div>
	</section>
}