@model IEnumerable<Report>
@{
	Layout = null;
}

@foreach (var item in Model)
{
	<li class="comment-item">
		<div class="comment">
			<div class="visitor_description">
				<div class="name_date">
					@if (item.UserId != null)
					{
						<h6>@item.User.NameSurname</h6>
						<h8>@await Component.InvokeAsync("GetCompanyInformation", new { id = item.UserId })</h8>
					}
					<div class="date">@item.CreatedDate.ToShortDateString()</div>
				</div>
				<p><h6>Kategorisi: @item.ReportCategory.Name</h6></p>
				<p>Bildirim Başlığı: @item.Title</p>
				<p>
					Bildirim Metni: @item.Desc
				</p>
			</div>
		</div>
	</li>
}