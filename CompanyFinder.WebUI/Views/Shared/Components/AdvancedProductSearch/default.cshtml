@{
	Layout = null;
}

<form asp-controller="Explorer" asp-action="AdvancedProductSearchResult" method="get">
	<div class="row">
		<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
			<div class="form-group">
				<div class="chosen-select-single mg-b-20">
					<strong style="color:blue">Kategori Listesi</strong>
					<select class="form-control">
						@foreach (var item in ViewBag.ProductCategories)
						{
							<option value="@item.Id">@item.Name</option>
						}
					</select>
				</div>
			</div>
			<div class="form-group">
				<div class="chosen-select-single mg-b-20">
					<strong style="color:blue">Altkategori Listesi</strong>
					<select class="form-control">
						@foreach (var item in ViewBag.ProductSubcategories)
						{
							<option value="@item.Id">@item.Name</option>
						}
					</select>
				</div>
			</div>
			<div class="form-group">
				<strong style="color:blue">Ürün Adı *</strong>
				<input name="key" type="text" placeholder="Ürün Adını Buraya Yazabilirsiniz..." requied />
			</div>
		</div>
		<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 form-group text-center mar-none">
			<button type="submit">Ürünü Ara <i class="flat flaticon-plane"></i></button>
		</div>
	</div>
</form>