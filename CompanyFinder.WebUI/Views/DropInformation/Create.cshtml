@model DropInformation
@{
	ViewData["Title"] = "İletişim Bilgilerinizi Bırakın";
	ViewData["Subtitle"] = "İletişim Bilgilerinizi Bırakırsanız ve Sizinle İletişime Geçebiliriz.";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<section id="contact-us">
	<div class="container">
		<div class="row">
			<div class="col-lg-2 col-md-2 col-sm-6 col-xs-12"></div>
			<div class="col-lg-8 col-md-8 col-sm-6 col-xs-12">
				<div class="form-header text-center">
					<h4>@ViewData["Title"]</h4>
					<div class="separator">
						<ul>
							<li></li>
							<li></li>
							<li></li>
						</ul>
					</div>
					<p>@ViewData["Subtitle"]</p>
				</div>
				<div class="contact-form">
					<form asp-controller="DropInformation" asp-action="Create" method="post">
						@Html.AntiForgeryToken()
						<div class="row">
							<div class="col-lg-10 col-md-10 col-sm-10 col-xs-12 form-group">
								<input type="text" asp-for="CompanyName" name="CompanyName" placeholder="Firma Adı *" required />
							</div>
							<div class="col-lg-10 col-md-10 col-sm-10 col-xs-12 form-group">
								<input type="email" asp-for="Email" name="Email" placeholder="Email Adresiniz *" required />
							</div>
							<div class="col-lg-10 col-md-10 col-sm-10 col-xs-12 form-group">
								<input type="text" asp-for="Location" name="Location" placeholder="Firmanızın Bulunduğu Şehir *" required />
							</div>
							<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 form-group text-center">
								<button type="submit">Bilgileri Gönder </button>
							</div>
						</div>
					</form>
					<br />
					<partial name="_frontEndAlertPartial" />					
				</div>
			</div>
			<div class="col-lg-2 col-md-2 col-sm-6 col-xs-12"></div>
		</div>
	</div>
</section>