@model ProfileImage
@{
	ViewData["Title"] = "Delete Profile Image";
	ViewData["Subtitle"] = "Profile Image Navigator";
	Layout = "~/Views/Shared/_adminLayout.cshtml";
}

<div class="wrapper-pro">
	<div class="breadcome-area mg-b-30 small-dn">
		<div class="container-fluid">
			<div class="row">
				<div class="col-lg-12">
					<div class="breadcome-list map-mg-t-40-gl shadow-reset">
						<div class="row">
							<div class="col-lg-3 col-md-3 col-sm-3 col-xs-3">
								<div class="breadcome-heading">
									@ViewData["Subtitle"]
								</div>
							</div>
							<div class="col-lg-9 col-md-9 col-sm-9 col-xs-9">
								<ul class="breadcome-menu">
									<li>
										<a asp-controller="ProfileImage" asp-action="kurtulusocL">Profile Image Home</a> <span class="bread-slash">/</span>
									</li>
									<li>
										<a asp-controller="ProfileImage" asp-action="AdminProfileImage">Admin Profile Images</a> <span class="bread-slash">/</span>
									</li>
									<li>
										<a asp-controller="ProfileImage" asp-action="AdminProfileImageForAdmin">Admin Profile Images for Admin</a> <span class="bread-slash">/</span>
									</li>
									<li>
										<a asp-controller="ProfileImage" asp-action="ProfileImageOps">Profile Image Ops</a> <span class="bread-slash">/</span>
									</li>
								</ul>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
	<div class="widgets-personal-info-area">
		<div class="container-fluid">
			<div class="row">
				<div class="col-lg-12">
					<div class="author-widgets-single widget-ov-mg-t-30 widget-ov-mg-t-n-30 widget-ov-mg-t-l-30 shadow-reset">
						<div class="perso-img">
							<img src="~/img/us/profileImage/@Model.ImageUrl" style="max-height:100px;max-width:100px;min-height:100px;min-width:100px;" class="img-responsive" asp-append-version="true" />
						</div>
						<div class="widget-text-box">
							<h4>Admin Information</h4>
							@if (Model.UserId != null)
							{
								<ul>
									<li>User Id: @Model.UserId</li>
									<li>Admin: @Model.User.NameSurname</li>
									@if (Model.User.Title != null)
									{
										<li>Email: @Model.User.Title</li>
									}
								</ul>
							}
							else
							{
								<strong style="color:darkred">No User Admin Info</strong>
							}
							@if (Model.UpdatedDate != null)
							{
								<p>Updated At: @Model.UpdatedDate.Value.ToShortDateString()</p>
							}
							@if (Model.IsActive == true)
							{
								<p>Active</p>
							}
							else
							{
								<p>DeActive</p>
							}
							@if (Model.IsDeleted == true)
							{
								<p>Deleted</p>
							}
							else
							{
								<p>Not Deleted</p>
							}
							<div class="text-right like-love-list">
								<a href="#" onclick="confirmDelete('ProfileImage', 'DeleteProfileImage', @Model.Id); return false;" class="btn btn-custon-rounded-three btn-danger btn-sm"> Delete </a>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>