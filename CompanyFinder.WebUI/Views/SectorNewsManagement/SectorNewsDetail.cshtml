@model SectorNews
@{
	ViewData["Title"] = "Sector News Detail";
	ViewData["Subtitle"] = "Sector News Navigator";
	Layout = "~/Views/Shared/_adminLayout.cshtml";
}

<div class="wrapper-pro">
	<div class="breadcome-area mg-b-30 small-dn">
		<div class="container-fluid">
			<div class="row">
				<div class="col-lg-12">
					<div class="breadcome-list map-mg-t-40-gl shadow-reset">
						<div class="row">
							<div class="col-lg-3 col-md-3 col-sm-3 col-xs-3">
								<div class="breadcome-heading">
									@ViewData["Subtitle"]
								</div>
							</div>
							<div class="col-lg-9 col-md-9 col-sm-9 col-xs-9">
								<ul class="breadcome-menu">
									<li>
										<a asp-controller="SectorNewsManagement" asp-action="kurtulusocL">Sector News Home</a> <span class="bread-slash">/</span>
									</li>
									<li>
										<a asp-controller="SectorNewsManagement" asp-action="MostLiked">Most Likeds</a> <span class="bread-slash">/</span>
									</li>
									<li>
										<a asp-controller="SectorNewsManagement" asp-action="MostHit">Most Hits</a> <span class="bread-slash">/</span>
									</li>
									<li>
										<a asp-controller="SectorNewsManagement" asp-action="SectorNewsManagementOps">Sector News Ops</a> <span class="bread-slash">/</span>
									</li>
								</ul>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
	<div class="project-details-area mg-b-40">
		<div class="container">
			<div class="row">
				<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
					<div class="project-details-wrap shadow-reset">
						<div class="row">
							<div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
								<div class="project-details-mg">
									<div class="row">
										<div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
											<div class="project-details-st">
												<span><strong>Active Status:</strong></span>
											</div>
										</div>
										<div class="col-lg-8 col-md-8 col-sm-8 col-xs-12">
											<div class="btn-group project-list-ad">
												@if (Model.IsActive == true)
												{
													<button class="btn btn-white btn-xs">Active</button>
												}
												else
												{
													<button class="btn btn-white btn-xs">DeActive</button>
												}
											</div>
										</div>
									</div>
								</div>
								<div class="project-details-mg">
									<div class="row">
										<div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
											<div class="project-details-st">
												<span><strong>Deleted Status:</strong></span>
											</div>
										</div>
										<div class="col-lg-8 col-md-8 col-sm-8 col-xs-12">
											<div class="btn-group project-list-ad">
												@if (Model.IsDeleted == true)
												{
													<button class="btn btn-white btn-xs">Deleted</button>
												}
												else
												{
													<button class="btn btn-white btn-xs">Not Deleted</button>
												}
											</div>
										</div>
									</div>
								</div>
								<div class="project-details-mg">
									<div class="row">
										<div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
											<div class="project-details-st">
												<span><strong>Created Date:</strong></span>
											</div>
										</div>
										<div class="col-lg-8 col-md-8 col-sm-8 col-xs-12">
											<div class="project-details-dt">
												<span>@Model.CreatedDate.ToLongDateString()</span>
											</div>
										</div>
									</div>
								</div>
								<div class="project-details-mg">
									<div class="row">
										<div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
											<div class="project-details-st">
												<span><strong>Updated Date:</strong></span>
											</div>
										</div>
										<div class="col-lg-8 col-md-8 col-sm-8 col-xs-12">
											<div class="project-details-dt">
												@if (Model.UpdatedDate != null)
												{
													<span>@Model.UpdatedDate.Value.ToLongDateString()</span>
												}
												else
												{
													<span>---</span>
												}
											</div>
										</div>
									</div>
								</div>
							</div>
							<div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
								<div class="project-details-mg">
									<div class="row">
										<div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
											<div class="project-details-st">
												<span><strong>ID No:</strong></span>
											</div>
										</div>
										<div class="col-lg-8 col-md-8 col-sm-8 col-xs-12">
											<div class="project-details-dt">
												<span>@Model.Id</span>
											</div>
										</div>
									</div>
								</div>
							</div>
						</div>
						<div class="row">
							<div class="col-lg-12">
								<div class="project-details-tab">
									<ul class="nav nav-tabs res-pd-less-sm">
										<li class="active">
											<a data-toggle="tab" href="#menu1">@ViewData["Title"]</a>
										</li>
									</ul>
									<div class="tab-content res-tab-content-project">
										<div id="menu1" class="tab-pane fade in active animated zoomInLeft">
											<div class="project-details-completeness">
												<dl class="table table-striped">
													<dt class="col-sm-4">
														Sector News Title
													</dt>
													<dd class="col-sm-8">
														@Model.Title
													</dd>
													<dt class="col-sm-4">
														Sector News Subtitle
													</dt>
													<dd class="col-sm-8">
														@Model.Subtitle
													</dd>
													<dt class="col-sm-4">
														Sector News Description
													</dt>
													<dd class="col-sm-8">
														@Html.Raw(Model.Desc)
													</dd>
													<dt class="col-sm-4">
														Sector News Detail
													</dt>
													<dd class="col-sm-8">
														@if (Model.Detail != null)
														{
															@Model.Detail
														}
														else
														{
															<strong style="color:maroon">No Detail</strong>
														}
													</dd>
													<dt class="col-sm-4">
														Sector News Redirect Url
													</dt>
													<dd class="col-sm-8">
														@if (Model.RedirectUrl != null)
														{
															<p>Url: @Model.RedirectUrl</p>
															<br />
															<a href="@Model.RedirectUrl" class="btn btn-dark btn-sm" target="_blank">Go to Url</a>
														}
														else
														{
															<strong style="color:maroon">No Url</strong>
														}
													</dd>
													<dt class="col-sm-4">
														Sector News Source
													</dt>
													<dd class="col-sm-8">
														@if (Model.Source != null)
														{
															@Model.Source
														}
														else
														{
															<strong style="color:maroon">No Source</strong>
														}
													</dd>
													<dt class="col-sm-4">
														Hit / Like
													</dt>
													<dd class="col-sm-8">
														<ul>
															<li>@Model.Hits.Count() hits</li>
															<li>@Model.Likes.Count() likes</li>
														</ul>
													</dd>
												</dl>
											</div>
										</div>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>