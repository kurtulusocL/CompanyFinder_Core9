@model ReportAnswer
@{
	ViewData["Title"] = "Add A New Answer for Report";
	ViewData["Subtitle"] = "Report Navigator";
	Layout = "~/Views/Shared/_adminLayout.cshtml";
}

<div class="wrapper-pro">
	<div class="breadcome-area mg-b-30 small-dn">
		<div class="container-fluid">
			<div class="row">
				<div class="col-lg-12">
					<div class="breadcome-list map-mg-t-40-gl shadow-reset">
						<div class="row">
							<div class="col-lg-3 col-md-3 col-sm-3 col-xs-3">
								<div class="breadcome-heading">
									@ViewData["Subtitle"]
								</div>
							</div>
							<div class="col-lg-9 col-md-9 col-sm-9 col-xs-9">
								<ul class="breadcome-menu">
									<li>
										<a asp-controller="Report" asp-action="kurtulusocL">Report Home</a> <span class="bread-slash">/</span>
									</li>
									<li>
										<a asp-controller="Report" asp-action="AnsweredReport">Answered Reports</a> <span class="bread-slash">/</span>
									</li>
									<li>
										<a asp-controller="Report" asp-action="NotAnsweredReport">Not Answered Reports</a> <span class="bread-slash">/</span>
									</li>
									<li>
										<a asp-controller="Report" asp-action="FixedReport">Fixed Reports</a> <span class="bread-slash">/</span>
									</li>
									<li>
										<a asp-controller="Report" asp-action="NotFixedReport">Not Fixed Reports</a> <span class="bread-slash">/</span>
									</li>
									<li>
										<a asp-controller="Report" asp-action="ReportOps">Report Answer Ops</a> <span class="bread-slash">/</span>
									</li>
								</ul>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
	<div class="basic-form-area mg-b-40">
		<div class="container-fluid">
			<div class="row">
				<div class="col-lg-12">
					<div class="sparkline12-list shadow-reset mg-t-30">
						<div class="sparkline12-hd">
							<div class="main-sparkline12-hd">
								<h1>@ViewData["Title"]</h1>
								<div class="sparkline12-outline-icon">
									<span class="sparkline12-collapse-link"><i class="fa fa-chevron-up"></i></span>
								</div>
							</div>
						</div>
						<div class="sparkline12-graph">
							<div class="basic-login-form-ad">
								<div class="row">
									<div class="col-lg-12">
										<div class="all-form-element-inner">
											<form asp-controller="Report" asp-action="CreateAnswer" method="post">
												@Html.AntiForgeryToken()
												<div class="form-group-inner">
													<div class="row">
														<div class="col-lg-12">
															<strong style="color:blue">Report Answer Title<span class="text-danger">*</span></strong>
															<textarea type="text" asp-for="Title" name="Title" class="form-control" required></textarea>
														</div>
													</div>
												</div>
												<div class="form-group-inner">
													<div class="row">
														<div class="row">
															<div class="col-lg-12">
																<strong style="color:blue">Report Answer Text<span class="text-danger">*</span></strong>
																<textarea type="text" asp-for="Desc" name="Desc" class="ckeditor" required></textarea>
															</div>
														</div>
													</div>
												</div>
												<div class="form-group-inner">
													<div class="login-btn-inner">
														<div class="row">
															<div class="col-lg-7"></div>
															<div class="col-lg-5">
																<div class="login-horizental cancel-wp pull-left">
																	<button class="btn btn-custon-rounded-four btn-primary" type="submit">Send Report Answer</button>
																	<input type="hidden" asp-for="ReportId" />
																	<a asp-controller="Report" asp-action="kurtulusocL" class="btn btn-custon-rounded-four btn-warning">Cancel</a>
																</div>
															</div>
														</div>
													</div>
												</div>
											</form>
											<partial name="_adminCrudAlertPartial" />
										</div>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>