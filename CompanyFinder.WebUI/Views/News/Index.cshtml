@using X.PagedList.Mvc.Core
@using X.PagedList
@using X.PagedList.Web.Common
@model IPagedList<News>
@{
	ViewData["Title"] = "Haberler & Duyurular";
	ViewData["Subtitle"] = "Bizden Haberler & Duyurular";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<section id="inner-banner" class="index-3">
	<div class="container">
		<div class="col-lg-12 col-md-12 col-xs-12">
			<div class="inner-heading">
				<h2>@ViewData["Title"]</h2>
				<div class="separator left-align">
					<ul>
						<li></li>
						<li></li>
						<li></li>
					</ul>
				</div>
				<nav aria-label="breadcrumb">
					<ol class="breadcrumb">
						<li class="breadcrumb-item active" aria-current="page">@ViewData["Subtitle"]</li>
					</ol>
				</nav>
			</div>
		</div>
	</div>
</section>
<section id="our_team" class="inner index-3">
	<div id="web-developer" class="gray-bg">
		<div class="container">
			<div class="section_heading">
				<h2>@ViewData["Title"]</h2>
				<div class="separator">
					<ul>
						<li></li>
						<li></li>
						<li></li>
					</ul>
				</div>
			</div>
			<div class="col-lg-12 col-md-12 col-xs-12 content_sec">
				<div class="row">
					@foreach (var item in Model)
					{
						<div class="item col-lg-6 col-md-6 col-md-12 col-xs-12">
							<div class="client_dp">
								<img src="~/img/us/news/@item.ImageUrl" style="max-height:118px;max-width:118px;" asp-append-version="true" />
							</div>
							<div class="team-card">
								<div class="name_designation">
									<h5>
										<a asp-controller="News" asp-action="Detail" asp-route-id="@item.Id">
											@item.Title
										</a>
									</h5>
									<span>@item.CreatedDate.ToShortDateString()</span>
								</div>
								<div class="description">
									<p>@item.Subtitle</p>
								</div>
								<div class="social_links" style="color:black">
									<ul>
										<li>@item.Hit.ToString() görüntülenme</li>
										<li>@item.Like.ToString() beğeni</li>
									</ul>
								</div>
							</div>
						</div>
					}
				</div>
				<div class="pagination">
					<div class="pagination">
						<div class="pagination-info">
							@Html.PagedListPager(Model, page => Url.Action("Index", new { page }), PagedListRenderOptions.ClassicPlusFirstAndLast)
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>