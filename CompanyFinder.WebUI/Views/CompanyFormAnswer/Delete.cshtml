@model CompanyFormAnswer
@{
	ViewData["Title"] = "Company Form Answer Delete";
	ViewData["Subtitle"] = "Company Form Answer Navigator";
	Layout = "~/Views/Shared/_adminLayout.cshtml";
}

<div class="wrapper-pro">
	<div class="breadcome-area mg-b-30 small-dn">
		<div class="container-fluid">
			<div class="row">
				<div class="col-lg-12">
					<div class="breadcome-list map-mg-t-40-gl shadow-reset">
						<div class="row">
							<div class="col-lg-3 col-md-3 col-sm-3 col-xs-3">
								<div class="breadcome-heading">
									@ViewData["Subtitle"]
								</div>
							</div>
							<div class="col-lg-9 col-md-9 col-sm-9 col-xs-9">
								<ul class="breadcome-menu">
									<li>
										<a asp-controller="CompanyFormAnswer" asp-action="kurtulusocL">Company Form Answer Home</a> <span class="bread-slash">/</span>
									</li>
									<li>
										<a asp-controller="CompanyFormManagement" asp-action="kurtulusocL">Company Form Home</a> <span class="bread-slash">/</span>
									</li>
									<li>
										<a asp-controller="CompanyFormAnswer" asp-action="CompanyFormAnswerOps">Company Form Answer Ops</a> <span class="bread-slash">/</span>
									</li>
								</ul>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
	<div class="widgets-personal-info-area">
		<div class="container-fluid">
			<div class="row">
				<div class="col-lg-12">
					<div class="author-widgets-single widget-ov-mg-t-30 widget-ov-mg-t-n-30 widget-ov-mg-t-l-30 shadow-reset">
						<div class="persoanl-widget-hd persoanl1-widget-hd">
							@if (Model.Title != null)
							{
								<h2>
									Title: @Model.Title
								</h2>
							}
							else
							{
								<h2>
									<strong style="color:darkred">No Another Reason</strong>
								</h2>
							}
							<p>
								@if (Model.CompanyFormId != null)
								{
									<ul>
										<li>Company FormId: @Model.CompanyFormId</li>
										<li>Form Title: @Model.CompanyForm.Title</li>
									</ul>
								}
								else
								{
									<strong style="color:darkred">No Company Form Info</strong>
								}
							</p>
							<p>
								@if (Model.UserId != null)
								{
									<ul>
										<li>UserId: @Model.UserId</li>
										<li>Name Surname: @Model.User.NameSurname</li>
										<li>Email: @Model.User.Email</li>
										<li>Username: @Model.User.UserName</li>
										<li>Location: @Model.User.City, @Model.User.Country</li>
									</ul>
								}
								else
								{
									<strong style="color:darkred">No User Information</strong>
								}
							</p>
							<p>
								@if (Model.UserId != null)
								{
									<ul>
										@if (Model.User.IsActive == true)
										{
											<li>Active User</li>
										}
										else
										{
											<li>De Active User</li>
										}
										@if (Model.User.IsDeleted == true)
										{
											<li>Deleted User</li>
										}
										else
										{
											<li>Not Deleted User</li>
										}
									</ul>
								}
								else
								{
									<strong style="color:darkred">No User</strong>
								}
							</p>

							<div class="social-widget-result social-widget1-result">
								<span>Reports: @Model.Reports.Count()</span>
								<span>Created At: @Model.CreatedDate.ToShortDateString()</span>
							</div>
							<div class="widget-text-box">
								<h4>
									Answer: @Html.Raw(Model.Desc)
								</h4>
								@if (Model.UpdatedDate != null)
								{
									<p>Updated At: @Model.UpdatedDate.Value.ToShortDateString()</p>
								}
								@if (Model.IsActive == true)
								{
									<p>Active</p>
								}
								else
								{
									<p>DeActive</p>
								}
								@if (Model.IsDeleted == true)
								{
									<p>Deleted</p>
								}
								else
								{
									<p>Not Deleted</p>
								}
								<div class="text-right like-love-list">
									<a href="#" onclick="confirmDelete('CompanyFormAnswer', 'DeleteCompanyFormAnswer', @Model.Id); return false;" class="btn btn-custon-rounded-three btn-danger btn-sm"> Delete </a>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>