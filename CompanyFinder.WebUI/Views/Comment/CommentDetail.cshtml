@model Comment
@{
	ViewData["Title"] = "Comment Detail";
	ViewData["Subtitle"] = "Comment Navigator";
	Layout = "~/Views/Shared/_adminLayout.cshtml";
}

<div class="wrapper-pro">
	<div class="breadcome-area mg-b-30 small-dn">
		<div class="container-fluid">
			<div class="row">
				<div class="col-lg-12">
					<div class="breadcome-list map-mg-t-40-gl shadow-reset">
						<div class="row">
							<div class="col-lg-3 col-md-3 col-sm-3 col-xs-3">
								<div class="breadcome-heading">
									@ViewData["Subtitle"]
								</div>
							</div>
							<div class="col-lg-9 col-md-9 col-sm-9 col-xs-9">
								<ul class="breadcome-menu">
									<li>
										<a asp-controller="Comment" asp-action="kurtulusocL">Comment Home</a> <span class="bread-slash">/</span>
									</li>
									<li>
										<a asp-controller="CommentAnswer" asp-action="kurtulusocL">Comment Answer Home</a> <span class="bread-slash">/</span>
									</li>
									<li>
										<a asp-controller="Comment" asp-action="CommentOps">Comment Ops</a> <span class="bread-slash">/</span>
									</li>
								</ul>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
	<div class="project-details-area mg-b-40">
		<div class="container">
			<div class="row">
				<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
					<div class="project-details-wrap shadow-reset">
						<div class="row">
							<div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
								<div class="project-details-mg">
									<div class="row">
										<div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
											<div class="project-details-st">
												<span><strong>Active Status:</strong></span>
											</div>
										</div>
										<div class="col-lg-8 col-md-8 col-sm-8 col-xs-12">
											<div class="btn-group project-list-ad">
												@if (Model.IsActive == true)
												{
													<button class="btn btn-white btn-xs">Active</button>
												}
												else
												{
													<button class="btn btn-white btn-xs">DeActive</button>
												}
											</div>
										</div>
									</div>
								</div>
								<div class="project-details-mg">
									<div class="row">
										<div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
											<div class="project-details-st">
												<span><strong>Deleted Status:</strong></span>
											</div>
										</div>
										<div class="col-lg-8 col-md-8 col-sm-8 col-xs-12">
											<div class="btn-group project-list-ad">
												@if (Model.IsDeleted == true)
												{
													<button class="btn btn-white btn-xs">Deleted</button>
												}
												else
												{
													<button class="btn btn-white btn-xs">Not Deleted</button>
												}
											</div>
										</div>
									</div>
								</div>
								<div class="project-details-mg">
									<div class="row">
										<div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
											<div class="project-details-st">
												<span><strong>Created Date:</strong></span>
											</div>
										</div>
										<div class="col-lg-8 col-md-8 col-sm-8 col-xs-12">
											<div class="project-details-dt">
												<span>@Model.CreatedDate.ToLongDateString()</span>
											</div>
										</div>
									</div>
								</div>
								<div class="project-details-mg">
									<div class="row">
										<div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
											<div class="project-details-st">
												<span><strong>Updated Date:</strong></span>
											</div>
										</div>
										<div class="col-lg-8 col-md-8 col-sm-8 col-xs-12">
											<div class="project-details-dt">
												@if (Model.UpdatedDate != null)
												{
													<span>@Model.UpdatedDate.Value.ToLongDateString()</span>
												}
												else
												{
													<span>---</span>
												}
											</div>
										</div>
									</div>
								</div>
							</div>
							<div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
								<div class="project-details-mg">
									<div class="row">
										<div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
											<div class="project-details-st">
												<span><strong>ID No:</strong></span>
											</div>
										</div>
										<div class="col-lg-8 col-md-8 col-sm-8 col-xs-12">
											<div class="project-details-dt">
												<span>@Model.Id</span>
											</div>
										</div>
									</div>
								</div>
								<div class="project-details-mg">
									<div class="row">
										<div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
											<div class="project-details-st">
												<span><strong>User ID No:</strong></span>
											</div>
										</div>
										<div class="col-lg-8 col-md-8 col-sm-8 col-xs-12">
											<div class="project-details-dt">
												@if (Model.UserId != null)
												{
													<span>@Model.UserId</span>
												}
												else
												{
													<span class="badge badge-warning">No UserId</span>
												}
											</div>
										</div>
									</div>
								</div>
							</div>
						</div>
						<div class="row">
							<div class="col-lg-12">
								<div class="project-details-tab">
									<ul class="nav nav-tabs res-pd-less-sm">
										<li class="active">
											<a data-toggle="tab" href="#menu1">@ViewData["Title"]</a>
										</li>
									</ul>
									<div class="tab-content res-tab-content-project">
										<div id="menu1" class="tab-pane fade in active animated zoomInLeft">
											<div class="project-details-completeness">
												<dl class="table table-striped">
													<dt class="col-sm-4">
														Comment Subject
													</dt>
													<dd class="col-sm-8">
														@if (Model.Subject != null)
														{
															@Model.Subject
														}
														else
														{
															<strong style="color:darkred">No Subject</strong>
														}
													</dd>
													<dt class="col-sm-4">
														Comment Text
													</dt>
													<dd class="col-sm-8">
														@Model.Text
													</dd>
													<dt class="col-sm-4">
														Comment For
													</dt>
													<dd class="col-sm-8">
														@if (Model.CompanyId != null)
														{
															<strong style="color:darkblue">Comment for Company</strong>
															<ul>
																<li>CompanyId: @Model.CompanyId</li>
																<li>Name: @Model.Company.Name</li>
															</ul>
														}
														@if (Model.BlogId != null)
														{
															<strong style="color:darkblue">Comment for Blog</strong>
															<ul>
																<li>BlogId: @Model.BlogId</li>
															</ul>
														}
														@if (Model.ProductId != null)
														{
															<strong style="color:darkblue">Comment for Product</strong>
															<ul>
																<li>ProductId: @Model.ProductId</li>
																<li>Product: @Model.Product.Name</li>
																@if (Model.Product.CompanyId != null)
																{
																	<li>Product CompanyId: @Model.Product.CompanyId</li>
																	<li>Product Company: @Model.Product.Company.Name</li>
																}
																else
																{
																	<li>
																		<strong style="color:darkred">No Product Company</strong>
																	</li>
																}
															</ul>
														}
													</dd>
													<dt class="col-sm-4">
														User Information
													</dt>
													<dd class="col-sm-8">
														@if (Model.UserId != null)
														{
															<ul>
																<li>UserId: @Model.UserId</li>
																<li>Name Surname: @Model.User.NameSurname</li>
																<li>Email: @Model.User.Email</li>
																<li>Username: @Model.User.UserName</li>
																<li>Location: @Model.User.City, @Model.User.Country</li>
															</ul>
														}
														else
														{
															<strong style="color:darkred">No User Information</strong>
														}
													</dd>
													<dt class="col-sm-4">
														Counts
													</dt>
													<dd class="col-sm-8">
														<ul>
															<li>Answers: @Model.CommentAnswers.Count()</li>
															<li>Reports: @Model.Reports.Count()</li>
														</ul>
													</dd>													
													<dt class="col-sm-4">
														User Status
													</dt>
													<dd class="col-sm-8">
														@if (Model.UserId != null)
														{
															<ul>
																@if (Model.User.IsActive == true)
																{
																	<li>Active User</li>
																}
																else
																{
																	<li>De Active User</li>
																}
																@if (Model.User.IsDeleted == true)
																{
																	<li>Deleted User</li>
																}
																else
																{
																	<li>Not Deleted User</li>
																}
															</ul>
														}
														else
														{
															<strong style="color:darkred">No User</strong>
														}
													</dd>
												</dl>
											</div>
										</div>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>