@model BlackList
@{
	ViewData["Title"] = "Delete BlackList User & Company";
	ViewData["Subtitle"] = "BlackList Navigator";
	Layout = "~/Views/Shared/_adminLayout.cshtml";
}

<div class="wrapper-pro">
	<div class="breadcome-area mg-b-30 small-dn">
		<div class="container-fluid">
			<div class="row">
				<div class="col-lg-12">
					<div class="breadcome-list map-mg-t-40-gl shadow-reset">
						<div class="row">
							<div class="col-lg-3 col-md-3 col-sm-3 col-xs-3">
								<div class="breadcome-heading">
									@ViewData["Subtitle"]
								</div>
							</div>
							<div class="col-lg-9 col-md-9 col-sm-9 col-xs-9">
								<ul class="breadcome-menu">
									<li>
										<a asp-controller="BlackList" asp-action="kurtulusocL">BlackList Home</a> <span class="bread-slash">/</span>
									</li>
									<li>
										<a asp-controller="BlackList" asp-action="BlackListOps">BlackList Ops</a> <span class="bread-slash">/</span>
									</li>
								</ul>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
	<div class="widgets-personal-info-area">
		<div class="container-fluid">
			<div class="row">
				<div class="col-lg-12">
					<div class="author-widgets-single widget-ov-mg-t-30 widget-ov-mg-t-n-30 widget-ov-mg-t-l-30 shadow-reset">						
						<div class="persoanl-widget-hd persoanl1-widget-hd">
							<h2>Mac Address: @Model.MacAddress</h2>
							<h4>Ip Address: @Model.IpAddress</h4>
							<h4>Local Ip Address: @Model.LocalIpAddress</h4>
						</div>
						<div class="social-widget-result social-widget1-result">
							<span>
								Remote Ip Address: @Model.RemoteIpAddress
							</span>
							<span>Ip Address with VPN: @Model.IpAddressVPN</span>
							<span>Expiration Date: @Model.ExpirationDate.ToLongDateString()</span>
							<span>Created At: @Model.CreatedDate.ToShortDateString()</span>
						</div>
						<div class="widget-text-box">
							@if (Model.AuditId != null)
							{
								<h4>Audit Information</h4>
								<br />
								<ul>
									<li>Username: @Model.Audit.UserName</li>
									<li>User ID: @Model.Audit.UserId</li>
									<li>Proxy Connection: @Model.Audit.ProxyConnection</li>
									<li>Host: @Model.Audit.Host</li>
									<li>Area Accessed: @Model.Audit.AreaAccessed</li>
									<li>Manufacturer: @Model.Audit.Manufacturer</li>
								</ul>
							}
							else
							{
								<strong style="color:maroon">No Audit Information</strong>
							}							
							@if (Model.UpdatedDate != null)
							{
								<p>Updated At: @Model.UpdatedDate.Value.ToLongDateString()</p>
							}
							@if (Model.IsActive == true)
							{
								<p>Active</p>
							}
							else
							{
								<p>DeActive</p>
							}
							@if (Model.IsDeleted == true)
							{
								<p>Deleted</p>
							}
							else
							{
								<p>Not Deleted</p>
							}
							<div class="text-right like-love-list">
								<a href="#" onclick="confirmDelete('BlackList', 'DeleteBlackList', @Model.Id); return false;" class="btn btn-custon-rounded-three btn-danger btn-sm"> Delete </a>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>