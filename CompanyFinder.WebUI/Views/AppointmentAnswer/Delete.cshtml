@model AppointmentAnswer
@{
	ViewData["Title"] = "Delete Appointment Answer";
	ViewData["Subtitle"] = "Appointment Answer Navigator";
	Layout = "~/Views/Shared/_adminLayout.cshtml";
}

<div class="wrapper-pro">
	<div class="breadcome-area mg-b-30 small-dn">
		<div class="container-fluid">
			<div class="row">
				<div class="col-lg-12">
					<div class="breadcome-list map-mg-t-40-gl shadow-reset">
						<div class="row">
							<div class="col-lg-3 col-md-3 col-sm-3 col-xs-3">
								<div class="breadcome-heading">
									@ViewData["Subtitle"]
								</div>
							</div>
							<div class="col-lg-9 col-md-9 col-sm-9 col-xs-9">
								<ul class="breadcome-menu">
									<li>
										<a asp-controller="AppointmentAnswer" asp-action="kurtulusocL">Appointment Answer Home</a> <span class="bread-slash">/</span>
									</li>
									<li>
										<a asp-controller="Appointment" asp-action="kurtulusocL">Appointment Home</a> <span class="bread-slash">/</span>
									</li>
									<li>
										<a asp-controller="AppointmentAnswer" asp-action="ApprovedAnswer">Approved Appointment Answer</a> <span class="bread-slash">/</span>
									</li>
									<li>
										<a asp-controller="AppointmentAnswer" asp-action="NotApprovedAnswer">Not Approved Appointment Answers</a> <span class="bread-slash">/</span>
									</li>
									<li>
										<a asp-controller="AppointmentAnswer" asp-action="AnswerOps">Appointment Answer Ops</a> <span class="bread-slash">/</span>
									</li>
								</ul>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
	<div class="widgets-personal-info-area">
		<div class="container-fluid">
			<div class="row">
				<div class="col-lg-12">
					<div class="author-widgets-single widget-ov-mg-t-30 widget-ov-mg-t-n-30 widget-ov-mg-t-l-30 shadow-reset">
						<div class="persoanl-widget-hd persoanl1-widget-hd">
							<h2>Title: @Model.Title</h2>
							<p>Description: @Model.Desc</p>
							<p>
								<ul>
									@if (Model.AppointmentId != null)
									{
										if (Model.Appointment.CompanyId != null)
										{
											<li>CompanyId: @Model.Appointment.CompanyId</li>
											<li>Company: @Model.Appointment.Company.Name</li>
										}
										else
										{
											<li>
												<span class="badge badge-info">Not Appointment Company</span>
											</li>
										}
									}
									else
									{
										<li>
											<span class="badge badge-info">Not Appointment</span>
										</li>
									}
									@if (Model.Appointment != null)
									{
										if (Model.Appointment.UserId != null)
										{
											<li>UserId: @Model.Appointment.UserId</li>
											<li>User: @Model.Appointment.User.NameSurname</li>
											<li>Email: @Model.Appointment.User.Email</li>
											<li>UserName: @Model.Appointment.User.UserName</li>
										}
										else
										{
											<li>
												<span class="badge badge-info">Not Appointment User</span>
											</li>
										}
									}
									else
									{
										<li>
											<span class="badge badge-info">Not Appointment</span>
										</li>
									}
								</ul>
							</p>
							@if (Model.ReAppointmentApproved == true)
							{
								if (Model.ReApprovedDate != null)
								{
									<p>
										Approved at @Model.ReApprovedDate.Value.ToShortDateString();
									</p>
								}
							}
							else
							{
								<span class="badge badge-info">Not Appoved Appointment Answer</span>
							}
						</div>
						<div class="social-widget-result social-widget1-result">
							<span>Appointment Answer Date: @Model.ReAppointmentDate.ToShortDateString()</span>
							<span>Created At: @Model.CreatedDate.ToShortDateString()</span>
						</div>
						<div class="widget-text-box">
							<h4></h4>
							@if (Model.UpdatedDate != null)
							{
								<p>Updated At: @Model.UpdatedDate.Value.ToShortDateString()</p>
							}
							@if (Model.IsActive == true)
							{
								<p>Active</p>
							}
							else
							{
								<p>DeActive</p>
							}
							@if (Model.IsDeleted == true)
							{
								<p>Deleted</p>
							}
							else
							{
								<p>Not Deleted</p>
							}
							<div class="text-right like-love-list">
								<a href="#" onclick="confirmDelete('AppointmentAnswer', 'DeleteAnswer', @Model.Id); return false;" class="btn btn-custon-rounded-three btn-danger btn-sm"> Delete </a>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>