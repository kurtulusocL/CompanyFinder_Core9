@model AdCompany
@{
	ViewData["Title"] = "Update Ad Company";
	ViewData["Subtitle"] = "Ad Company Navigator";
	Layout = "~/Views/Shared/_adminLayout.cshtml";
}

<div class="wrapper-pro">
	<div class="breadcome-area mg-b-30 small-dn">
		<div class="container-fluid">
			<div class="row">
				<div class="col-lg-12">
					<div class="breadcome-list map-mg-t-40-gl shadow-reset">
						<div class="row">
							<div class="col-lg-3 col-md-3 col-sm-3 col-xs-3">
								<div class="breadcome-heading">
									@ViewData["Subtitle"]
								</div>
							</div>
							<div class="col-lg-9 col-md-9 col-sm-9 col-xs-9">
								<ul class="breadcome-menu">
									<li>
										<a asp-controller="AdCompany" asp-action="kurtulusocL">Ad Company Home</a> <span class="bread-slash">/</span>
									</li>
									<li>
										<a asp-controller="Ad" asp-action="kurtulusocL">Ad Home</a> <span class="bread-slash">/</span>
									</li>
									<li>
										<a asp-controller="AdCompany" asp-action="AdCompanyOps">Ad Company Ops</a> <span class="bread-slash">/</span>
									</li>
								</ul>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
	<div class="basic-form-area mg-b-40">
		<div class="container-fluid">
			<div class="row">
				<div class="col-lg-12">
					<div class="sparkline12-list shadow-reset mg-t-30">
						<div class="sparkline12-hd">
							<div class="main-sparkline12-hd">
								<h1>@ViewData["Title"]</h1>
								<div class="sparkline12-outline-icon">
									<span class="sparkline12-collapse-link"><i class="fa fa-chevron-up"></i></span>
								</div>
							</div>
						</div>
						<div class="sparkline12-graph">
							<div class="basic-login-form-ad">
								<div class="row">
									<div class="col-lg-12">
										<div class="all-form-element-inner">
											<form asp-controller="AdCompany" asp-action="Edit" method="post">
												@Html.AntiForgeryToken()
												<div class="form-group-inner">
													<div class="row">
														<div class="col-lg-4">
															<strong style="color:blue">Ad Company Name <span class="text-danger">*</span></strong>
															<input type="text" asp-for="Name" name="Name" class="form-control" required />
														</div>
														<div class="col-lg-4">
															<strong style="color:blue">Ad Company City <span class="text-danger">*</span></strong>
															<input type="text" asp-for="City" name="City" class="form-control" required />
														</div>
														<div class="col-lg-4">
															<strong style="color:blue">Ad Company Country <span class="text-danger">*</span></strong>
															<input type="text" asp-for="Country" name="Country" class="form-control" required />
														</div>
													</div>
												</div>
												<div class="form-group-inner">
													<div class="row">
														<div class="col-lg-4">
															<strong style="color:blue">Contact Person <span class="text-danger">*</span></strong>
															<input type="text" asp-for="ContactPerson" name="ContactPerson" class="form-control" required />
														</div>
														<div class="col-lg-4">
															<strong style="color:blue">Ad Company Email <span class="text-danger">*</span></strong>
															<input type="email" asp-for="Email" name="Email" class="form-control" required />
														</div>
														<div class="col-lg-4">
															<strong style="color:blue">Ad Company Phone Number <span class="text-danger">*</span></strong>
															<input type="text" asp-for="PhoneNumber" name="PhoneNumber" class="form-control" required />
														</div>
													</div>
												</div>
												<div class="form-group-inner">
													<div class="login-btn-inner">
														<div class="row">
															<div class="col-lg-7"></div>
															<div class="col-lg-5">
																<div class="login-horizental cancel-wp pull-left">
																	<button class="btn btn-custon-rounded-four btn-primary" type="submit">Update Ad Company</button>
																	<a asp-controller="AdCompany" asp-action="kurtulusocL" class="btn btn-custon-rounded-four btn-warning">Cancel</a>
																</div>
															</div>
														</div>
													</div>
												</div>
											</form>
											<partial name="_adminCrudAlertPartial" />
										</div>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
