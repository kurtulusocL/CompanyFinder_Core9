@model Ad
@{
	ViewData["Title"] = "Add A New Ad";
	ViewData["Subtitle"] = "Ad Navigator";
	Layout = "~/Views/Shared/_adminLayout.cshtml";
}

<div class="wrapper-pro">
	<div class="breadcome-area mg-b-30 small-dn">
		<div class="container-fluid">
			<div class="row">
				<div class="col-lg-12">
					<div class="breadcome-list map-mg-t-40-gl shadow-reset">
						<div class="row">
							<div class="col-lg-3 col-md-3 col-sm-3 col-xs-3">
								<div class="breadcome-heading">
									@ViewData["Subtitle"]
								</div>
							</div>
							<div class="col-lg-9 col-md-9 col-sm-9 col-xs-9">
								<ul class="breadcome-menu">
									<li>
										<a asp-controller="Ad" asp-action="kurtulusocL">Ad Home</a> <span class="bread-slash">/</span>
									</li>
									<li>
										<a asp-controller="AdCompany" asp-action="kurtulusocL">Ad Company Home</a> <span class="bread-slash">/</span>
									</li>
									<li>
										<a asp-controller="Ad" asp-action="TargetLessAd">TargetLess Ad</a> <span class="bread-slash">/</span>
									</li>
									<li>
										<a asp-controller="Ad" asp-action="TargetfullAd">Targetfull Ad</a> <span class="bread-slash">/</span>
									</li>
									<li>
										<a asp-controller="Ad" asp-action="ExpiryDateAds">Ad By Expiry Date</a> <span class="bread-slash">/</span>
									</li>
									<li>
										<a asp-controller="Ad" asp-action="AdOps">Ad Ops</a> <span class="bread-slash">/</span>
									</li>
								</ul>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
	<div class="basic-form-area mg-b-40">
		<div class="container-fluid">
			<div class="row">
				<div class="col-lg-12">
					<div class="sparkline12-list shadow-reset mg-t-30">
						<div class="sparkline12-hd">
							<div class="main-sparkline12-hd">
								<h1>@ViewData["Title"]</h1>
								<div class="sparkline12-outline-icon">
									<span class="sparkline12-collapse-link"><i class="fa fa-chevron-up"></i></span>
								</div>
							</div>
						</div>
						<div class="sparkline12-graph">
							<div class="basic-login-form-ad">
								<div class="row">
									<div class="col-lg-12">
										<div class="all-form-element-inner">
											<form asp-controller="Ad" asp-action="Create" method="post" enctype="multipart/form-data">
												@Html.AntiForgeryToken()
												<div class="form-group-inner">
													<div class="row">
														<div class="col-sm-5">
															<div class="form-group">
																<label style="color:blue">Ad Image</label>
																<input class="form-control btn-info" type="file" name="image" accept=".png, .jpg, .jpeg">
															</div>
														</div>
														<div class="col-sm-7">
															<div class="chosen-select-single mg-b-20">
																<strong style="color:blue">Ad Company List</strong>
																<select class="form-control" asp-for="AdCompanyId" name="AdCompanyId" required>
																	@foreach (var item in ViewBag.AdCompanies)
																	{
																		<option value="@item.Id">@item.Name - (@item.City, @item.Country)</option>
																	}
																</select>
															</div>
														</div>
													</div>
												</div>
												<div class="form-group-inner">
													<div class="row">
														<div class="col-lg-12">
															<strong style="color:blue">Ad Text <span class="text-danger">*</span></strong>
															<input type="text" asp-for="Text" name="Text" class="form-control" required />
														</div>
													</div>
												</div>
												<div class="form-group-inner">
													<div class="row">
														<div class="col-lg-12">
															<strong style="color:blue">Ad Subtext </strong>
															<input type="text" asp-for="Subtext" name="Subtext" class="form-control" />
														</div>
													</div>
												</div>
												<div class="form-group-inner">
													<div class="row">
														<div class="col-lg-4">
															<strong style="color:blue">Ad Show Date <span class="text-danger">*</span></strong>
															<input type="date" asp-for="ShowDate" name="ShowDate" class="form-control" required />
														</div>
														<div class="col-lg-4">
															<strong style="color:blue">Ad Expiry Date <span class="text-danger">*</span></strong>
															<input type="date" asp-for="ExpiryDate" name="ExpiryDate" class="form-control" required />
														</div>
														<div class="col-lg-4">
															<strong style="color:blue">Ad Target <span class="text-danger">*</span></strong>
															<br />
															<label>
																<input class="pull-left radio-checked" type="radio" asp-for="HasTarget" name="HasTarget" id="HasTarget_Yes" value="True"> Yes
															</label>
															<label>
																<input class="pull-left radio-checked" type="radio" asp-for="HasTarget" name="HasTarget" id="HasTarget_No" value="False"> No
															</label>
														</div>
													</div>
												</div>
												<div class="form-group-inner">
													<div class="row">
														<div class="col-lg-12">
															<strong style="color:blue">Ad Redirect Url </strong>
															<input type="url" asp-for="RedirectWebUrl" name="RedirectWebUrl" class="form-control" />
														</div>
													</div>
												</div>
												<div class="form-group-inner">
													<div class="login-btn-inner">
														<div class="row">
															<div class="col-lg-7"></div>
															<div class="col-lg-5">
																<div class="login-horizental cancel-wp pull-left">
																	<button class="btn btn-custon-rounded-four btn-primary" type="submit">Add Ad</button>
																	<input type="hidden" asp-for="AdCompanyId" />
																	<a asp-controller="Ad" asp-action="kurtulusocL" class="btn btn-custon-rounded-four btn-warning">Cancel</a>
																</div>
															</div>
														</div>
													</div>
												</div>
											</form>
											<partial name="_adminCrudAlertPartial" />
										</div>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>