@model AdTarget
@{
	ViewData["Title"] = "Add A Target to Ad";
	ViewData["Subtitle"] = "Ad & Ad Target Navigator";
	Layout = "~/Views/Shared/_adminLayout.cshtml";
}
<script src="~/temp/admin/js/vendor/jquery-1.11.3.min.js"></script>
<script src="~/js/seleccion/adtarget/adtargetselection.js"></script>
<div class="wrapper-pro">
	<div class="breadcome-area mg-b-30 small-dn">
		<div class="container-fluid">
			<div class="row">
				<div class="col-lg-12">
					<div class="breadcome-list map-mg-t-40-gl shadow-reset">
						<div class="row">
							<div class="col-lg-3 col-md-3 col-sm-3 col-xs-3">
								<div class="breadcome-heading">
									@ViewData["Subtitle"]
								</div>
							</div>
							<div class="col-lg-9 col-md-9 col-sm-9 col-xs-9">
								<ul class="breadcome-menu">
									<li>
										<a asp-controller="Ad" asp-action="kurtulusocL">Ad Home</a> <span class="bread-slash">/</span>
									</li>
									<li>
										<a asp-controller="AdTarget" asp-action="kurtulusocL">Ad Target Home</a> <span class="bread-slash">/</span>
									</li>
									<li>
										<a asp-controller="Ad" asp-action="TargetLessAd">TargetLess Ad</a> <span class="bread-slash">/</span>
									</li>
									<li>
										<a asp-controller="Ad" asp-action="TargetfullAd">Targetfull Ad</a> <span class="bread-slash">/</span>
									</li>
									<li>
										<a asp-controller="Ad" asp-action="ExpiryDateAds">Ad By Expiry Date</a> <span class="bread-slash">/</span>
									</li>
									<li>
										<a asp-controller="Ad" asp-action="AdOps">Ad Ops</a> <span class="bread-slash">/</span>
									</li>
								</ul>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
	<div class="basic-form-area mg-b-40">
		<div class="container-fluid">
			<div class="row">
				<div class="col-lg-12">
					<div class="sparkline12-list shadow-reset mg-t-30">
						<div class="sparkline12-hd">
							<div class="main-sparkline12-hd">
								<h1>@ViewData["Title"]</h1>
								<div class="sparkline12-outline-icon">
									<span class="sparkline12-collapse-link"><i class="fa fa-chevron-up"></i></span>
								</div>
							</div>
						</div>
						<div class="sparkline12-graph">
							<div class="basic-login-form-ad">
								<div class="row">
									<div class="col-lg-12">
										<div class="all-form-element-inner">
											<form asp-controller="Ad" asp-action="CreateAdTarget" method="post">
												@Html.AntiForgeryToken()
												<div class="form-group-inner">
													<div class="row">
														<div class="col-sm-4">
															<div class="chosen-select-single mg-b-20">
																<strong style="color:blue">Ad Country *</strong>
																<select class="form-control" asp-for="CountryId" name="CountryId" required>
																	<option>-- Select One Country --</option>
																	@foreach (var item in ViewBag.AdTargetCountries)
																	{
																		<option value="@item.Id">@item.Name</option>
																	}
																</select>
															</div>
														</div>
														<div class="col-sm-4">
															<div class="chosen-select-single mg-b-20">
																<strong style="color:blue">Ad City *</strong>
																<select class="form-control" asp-for="CityId" name="CityId" required>
																	<option>-- Select One City --</option>
																	@foreach (var item in ViewBag.AdTargetCities)
																	{
																		<option value="@item.Id">@item.Name - (@item.Country.Name)</option>
																	}
																</select>
															</div>
														</div>
													</div>
												</div>
												<div class="form-group-inner">
													<div class="login-btn-inner">
														<div class="row">
															<div class="col-lg-7"></div>
															<div class="col-lg-5">
																<div class="login-horizental cancel-wp pull-left">
																	<button class="btn btn-custon-rounded-four btn-primary" type="submit">Add Ad Target</button>
																	<input type="hidden" asp-for="CountryId" />
																	<input type="hidden" asp-for="CityId" />
																	<input type="hidden" asp-for="AdId" />
																	<a asp-controller="Ad" asp-action="kurtulusocL" class="btn btn-custon-rounded-four btn-warning">Cancel</a>
																</div>
															</div>
														</div>
													</div>
												</div>
											</form>
											<partial name="_adminCrudAlertPartial" />
										</div>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>